<style>
  .reset-shell {
    min-height: 100vh;
    background: linear-gradient(135deg, #0f172a, #1e293b);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
  }
  .reset-card {
    width: 100%;
    max-width: 420px;
    border: none;
    border-radius: 1rem;
  }
  .reset-logo {
    height: 64px;
    width: auto;
  }
</style>

<main class="reset-shell">
  <div class="card shadow-lg reset-card">
    <div class="card-body p-4 p-md-5">
      <div class="text-center mb-4">
        <img src="/img/pc-logo.png" alt="Porirua Club" class="reset-logo mb-3">
        <h2 class="h4 mb-1">Set a new password</h2>
        <p class="text-muted mb-0">Choose a strong password you can remember.</p>
      </div>

      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <% if (token) { %>
        <form method="POST" action="/auth/reset-password/<%= token %>" class="vstack gap-3">
          <div>
            <label class="form-label" for="resetPassword">New password</label>
            <input type="password" class="form-control" id="resetPassword" name="password" required>
          </div>
          <div>
            <label class="form-label" for="resetConfirmPassword">Confirm password</label>
            <input type="password" class="form-control" id="resetConfirmPassword" name="confirm_password" required>
          </div>
          <button type="submit" class="btn btn-primary w-100">Update password</button>
        </form>
      <% } else { %>
        <div class="text-center">
          <a href="/auth/login" class="btn btn-outline-secondary w-100">Back to login</a>
        </div>
      <% } %>
    </div>
  </div>
</main>
