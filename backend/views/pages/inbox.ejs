<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head', { title: 'Inbox' }) %>
  <style>
    /* Extra inbox-specific styles layered on top of main.css */
    .inbox-list { display: flex; flex-direction: column; gap: 10px; }
    .message-card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
      padding: 16px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      transition: all 0.15s ease;
    }
    .message-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 3px 10px rgba(0,0,0,0.15);
      background: #fcfcfc;
    }
    .msg-left { flex: 1; overflow: hidden; }
    .msg-from { font-weight: 600; color: #333; margin-bottom: 4px; }
    .msg-subject { color: #0063B1; font-size: 0.95rem; font-weight: 500; }
    .msg-preview { color: #666; font-size: 0.85rem; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
    .msg-date { font-size: 0.8rem; color: #777; text-align: right; min-width: 150px; }

    /* --- NEW: Auto-Linker styles --- */
    #autoLinkerPanel {
      margin-top: 30px;
      padding: 20px;
      border-radius: 10px;
      background: #f5f7fa;
      border: 1px solid #e5e7eb;
    }
    #autoLinkerPanel h2 {
      margin-top: 0;
      font-size: 1.3rem;
      color: #0f766e;
    }
    #runLinker {
      background: #0f766e;
      color: #fff;
      border: none;
      padding: 8px 16px;
      border-radius: 8px;
      cursor: pointer;
      font-size: 0.95rem;
      transition: background 0.2s;
    }
    #runLinker:hover { background: #115e59; }
    #linkerLog {
      margin-top: 12px;
      font-family: monospace;
      white-space: pre-wrap;
      font-size: 0.9rem;
      color: #1e293b;
      background: #fff;
      padding: 10px;
      border-radius: 8px;
      border: 1px solid #ddd;
      min-height: 60px;
    }
    .loading { color: #2563eb; }
    .success { color: #16a34a; }
    .error { color: #dc2626; }
  </style>
</head>

<body>
  <%- include('../partials/header', { active: 'inbox', user: user }) %>

  <main class="main-content">
    <div class="function-header">
      <h1>üì® Inbox</h1>
    </div>

    <% if (error) { %>
      <div class="card" style="background:#ffecec; color:#c00; padding:10px; margin-bottom:20px;">
        <strong><%= error %></strong>
      </div>
    <% } %>

    <% if (!messages.length) { %>
      <div class="card"><p>No messages found.</p></div>
    <% } else { %>
      <div class="inbox-list">
        <% messages.forEach((m, i) => { %>
          <div class="message-card" data-index="<%= i %>">
            <div class="msg-left">
              <div class="msg-from"><%= m.from?.emailAddress?.name || 'Unknown Sender' %></div>
              <div class="msg-subject"><%= m.subject || '(No Subject)' %></div>
              <div class="msg-preview"><%= m.bodyPreview?.slice(0, 140) || '' %></div>
            </div>
            <div class="msg-date"><%= new Date(m.receivedDateTime).toLocaleString() %></div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- üß≠ NEW: Auto-Linker panel -->
    <div id="autoLinkerPanel">
      <h2>üîó Auto-Linker Service</h2>
      <p>Automatically links incoming emails to existing contacts and functions.</p>
      <button id="runLinker">Run Auto-Linker</button>
      <div id="linkerLog"><em>Idle...</em></div>
    </div>
  </main>

  <!-- Message Modal (unchanged) -->
  <div id="messageModal" class="modal hidden">
    <div class="modal-content card">
      <h2 id="modalSubject"></h2>
      <p id="modalFrom" style="font-weight:600; margin-bottom:10px;"></p>
      <p id="modalDate" style="color:#777; font-size:0.9rem; margin-bottom:20px;"></p>
      <div id="modalBody" style="white-space:pre-wrap; line-height:1.4;"></div>
      <div style="margin-top:20px; text-align:right;">
        <button class="btn ghost" id="closeModalBtn">Close</button>
      </div>
    </div>
  </div>

  <script>
    // --- Modal Logic (existing) ---
    const messages = <%- JSON.stringify(messages) %>;
    const modal = document.getElementById('messageModal');
    const closeBtn = document.getElementById('closeModalBtn');
    const subjectEl = document.getElementById('modalSubject');
    const fromEl = document.getElementById('modalFrom');
    const dateEl = document.getElementById('modalDate');
    const bodyEl = document.getElementById('modalBody');

    document.querySelectorAll('.message-card').forEach(card => {
      card.addEventListener('click', () => {
        const msg = messages[card.dataset.index];
        subjectEl.textContent = msg.subject || '(No Subject)';
        fromEl.textContent = msg.from?.emailAddress?.name + ' <' + msg.from?.emailAddress?.address + '>';
        dateEl.textContent = new Date(msg.receivedDateTime).toLocaleString();
        bodyEl.textContent = msg.bodyPreview || '(Message preview only)';
        modal.classList.remove('hidden');
      });
    });

    closeBtn.addEventListener('click', () => modal.classList.add('hidden'));

    // --- NEW: Auto-Linker fetch logic ---
    const runLinkerBtn = document.getElementById('runLinker');
    const linkerLog = document.getElementById('linkerLog');

    runLinkerBtn.addEventListener('click', async () => {
      runLinkerBtn.disabled = true;
      linkerLog.innerHTML = '<span class="loading">‚è≥ Running Auto-Linker...</span>';

      try {
        const res = await fetch('/inbox/match', { method: 'POST' });
        const data = await res.json();

        if (res.ok) {
          linkerLog.innerHTML = '<span class="success">‚úÖ Completed successfully</span>\\n' +
            JSON.stringify(data, null, 2);
        } else {
          linkerLog.innerHTML = '<span class="error">‚ùå Error: ' + data.message + '</span>';
        }
      } catch (err) {
        linkerLog.innerHTML = '<span class="error">üí• Request failed: ' + err.message + '</span>';
      } finally {
        runLinkerBtn.disabled = false;
      }
    });
  </script>

  <style>
    /* Simple modal styling consistent with main.css aesthetic */
    .modal.hidden { display: none; }
    .modal {
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: rgba(0,0,0,0.4);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9999;
    }
    .modal-content {
      background: white;
      border-radius: 12px;
      padding: 24px;
      max-width: 600px;
      width: 90%;
      max-height: 80vh;
      overflow-y: auto;
    }
  </style>
</body>
</html>


