<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head', { title: 'Inbox' }) %>
  <link rel="stylesheet" href="/css/inbox.css">
  <style>
    /* --- Modern Unified Inbox Styling --- */
    .inbox-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    .inbox-header h1 {
      font-weight: 700;
      color: #0f766e;
    }

    .inbox-list {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .message-card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
      padding: 16px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: all 0.15s ease;
      text-decoration: none;
      color: inherit;
    }

    .message-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
      background: #fafafa;
    }

    .msg-left {
      flex: 1;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      gap: 2px;
    }

    .msg-from {
      font-weight: 600;
      color: #333;
    }

    .msg-subject {
      color: #0f766e;
      font-size: 0.95rem;
      font-weight: 500;
    }

    .msg-preview {
      color: #666;
      font-size: 0.85rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .msg-date {
      font-size: 0.8rem;
      color: #777;
      text-align: right;
      min-width: 120px;
    }

    /* --- Linked/Unlinked Badges --- */
    .badge {
      border-radius: 8px;
      font-size: 0.75rem;
      padding: 4px 8px;
      font-weight: 600;
      margin-left: 6px;
    }
    .badge-linked { background: #dcfce7; color: #166534; }
    .badge-unlinked { background: #fee2e2; color: #991b1b; }

    /* --- Stats Panel --- */
    .stats-panel {
      display: flex;
      gap: 20px;
      margin-bottom: 20px;
      background: #f9fafb;
      border-radius: 10px;
      padding: 12px 20px;
      border: 1px solid #e5e7eb;
    }
    .stat-box { text-align: center; }
    .stat-box h3 { margin: 0; font-size: 1.4rem; color: #0f766e; }
    .stat-box p { margin: 4px 0 0; color: #374151; font-size: 0.9rem; }

    /* --- Empty State --- */
    .empty-box {
      background: #fff;
      border-radius: 10px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
    }

    /* --- Auto-Linker --- */
    #autoLinkerPanel {
      margin-top: 30px;
      padding: 20px;
      border-radius: 10px;
      background: #f5f7fa;
      border: 1px solid #e5e7eb;
    }
    #runLinker {
      background: #0f766e;
      color: #fff;
      border: none;
      padding: 8px 16px;
      border-radius: 8px;
      cursor: pointer;
      font-size: 0.95rem;
      transition: background 0.2s;
    }
    #runLinker:hover { background: #115e59; }
    #linkerLog {
      margin-top: 12px;
      font-family: monospace;
      white-space: pre-wrap;
      font-size: 0.9rem;
      color: #1e293b;
      background: #fff;
      padding: 10px;
      border-radius: 8px;
      border: 1px solid #ddd;
      min-height: 60px;
    }
  </style>
</head>

<body>
  <%- include('../partials/header', { active: 'inbox', user: user }) %>

  <main class="main-content container py-4">
    <div class="inbox-header">
      <div>
        <h1>ðŸ“¨ Inbox</h1>
        <% if (enhanced) { %>
          <span style="font-size:0.95rem; color:#0f766e;">(Enhanced Mode)</span>
        <% } %>
      </div>
    </div>

    <% if (error) { %>
      <div class="card" style="background:#ffecec; color:#c00; padding:10px; margin-bottom:20px;">
        <strong><%= error %></strong>
      </div>
    <% } %>

    <% if (enhanced && stats && stats.total) { %>
      <div class="stats-panel">
        <div class="stat-box"><h3><%= stats.total %></h3><p>Total Messages</p></div>
        <div class="stat-box"><h3><%= stats.linked %></h3><p>Linked</p></div>
        <div class="stat-box"><h3><%= stats.unlinked %></h3><p>Unlinked</p></div>
      </div>
    <% } %>

    <% if (!messages || !messages.length) { %>
      <div class="empty-box"><p>No messages found.</p></div>
    <% } else { %>
      <div class="inbox-list">
        <% messages.forEach((m) => { 
             const sender = m.from_email || "Unknown Sender";
             const subject = m.subject || "(No Subject)";
             const preview = m.body ? m.body.slice(0, 120) : "(No content)";
             const dateVal = m.received_at || m.created_at;
             const linked = m.contact_name || m.function_name;
        %>
          <div 
            class="message-card"
            data-id="<%= m.id %>"
            data-linked="<%= linked ? 'true' : 'false' %>"
          >
            <div class="msg-left">
              <div class="msg-from">
                <%= sender %>
                <% if (linked) { %>
                  <span class="badge badge-linked">Linked</span>
                <% } else { %>
                  <span class="badge badge-unlinked">Unlinked</span>
                <% } %>
              </div>
              <div class="msg-subject"><%= subject %></div>
              <div class="msg-preview"><%= preview %></div>
            </div>
            <div class="msg-date" data-time="<%= dateVal %>"><%= dateVal ? new Date(dateVal).toLocaleString() : "" %></div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <% if (enhanced) { %>
      <!-- ðŸ§­ Auto-Linker Panel -->
      <div id="autoLinkerPanel">
        <h2>ðŸ”— Auto-Linker Service</h2>
        <p>Automatically links incoming emails to existing contacts and functions.</p>
        <button id="runLinker">Run Auto-Linker</button>
        <div id="linkerLog"><em>Idle...</em></div>
      </div>
    <% } %>
  </main>

  <%- include('../partials/footer') %>
  <script src="/js/inbox.js"></script>
</body>
</html>




