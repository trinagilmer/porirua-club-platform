<section class="page-dashboard container-fluid py-4">
  <h1 class="page-title">Club Overview</h1>

  <!-- KPI Bar (matching Functions Dashboard) -->
 <div class="kpi-section">
  <div class="kpi-bar mb-4">
    <div class="kpi">
      <div class="label">Confirmed+ Revenue</div>
      <div class="value">$<%= (kpis.confirmed_price || 0).toLocaleString() %></div>
    </div>
    <div class="kpi">
      <div class="label">Confirmed+ Cost</div>
      <div class="value">$<%= (kpis.confirmed_cost || 0).toLocaleString() %></div>
    </div>
    <div class="kpi">
      <div class="label">Pipeline Value</div>
      <div class="value">$<%= (kpis.pipeline_price || 0).toLocaleString() %></div>
    </div>
    <div class="kpi">
      <div class="label">Pipeline Leads</div>
      <div class="value"><%= kpis.pipeline_count || 0 %></div>
    </div>
  </div>
  </div>

  <!-- Chart -->
  <section class="card dashboard-card">
    <h2 class="card-title">Revenue Trend (Last 12 Months)</h2>
    <canvas id="revenueChart" height="120"></canvas>
  </section>

  <!-- Upcoming Functions -->
  <section class="card dashboard-card">
    <h2 class="card-title">Upcoming Functions</h2>
    <div class="table-responsive">
      <table class="table compact-table align-middle mb-0">
        <thead>
          <tr>
            <th>Date</th>
            <th>Event</th>
            <th>Room</th>
            <th>Guests</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% if (!upcoming.length) { %>
            <tr><td colspan="5" class="text-center text-muted py-3">No upcoming functions</td></tr>
          <% } else { upcoming.forEach(fn => { %>
            <tr>
              <td><%= fn.event_date?.toISOString().slice(0,10) %></td>
              <td><strong><%= fn.event_name %></strong></td>
              <td><%= fn.room_name || '—' %></td>
              <td><%= fn.attendees || '—' %></td>
              <td><%= fn.status %></td>
            </tr>
          <% }) } %>
        </tbody>
      </table>
    </div>
  </section>

  <!-- Chart Script -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const labels = <%- JSON.stringify(graph.labels || []) %>;
    const data = <%- JSON.stringify(graph.data || []) %>;
    const ctx = document.getElementById('revenueChart')?.getContext('2d');

    if (ctx && labels.length > 0) {
      new Chart(ctx, {
        type: 'line',
        data: {
          labels,
          datasets: [{
            label: 'Revenue',
            data,
            borderColor: '#6bb4de',
            backgroundColor: 'rgba(107,180,222,0.2)',
            tension: 0.3,
            fill: true,
            pointRadius: 4,
            pointHoverRadius: 6
          }]
        },
        options: {
          plugins: { legend: { display: false } },
          scales: { y: { beginAtZero: true } }
        }
      });
    } else {
      console.warn("Revenue Chart: no data to render.");
    }
  </script>
</section>


