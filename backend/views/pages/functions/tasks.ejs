<% locals.layout = 'layouts/main'; %>

  <!-- ðŸ§© Workspace -->
  <section class="function-workspace">
   
    <!-- ðŸ”¹ Body -->
    <div class="function-body py-4 px-4">


      <!-- âœ… Task Cards Grid -->
      <div class="task-cards-grid row g-3">
        <% if (Array.isArray(tasks) && tasks.length > 0) { %>
          <% tasks.forEach(task => { %>
            <div class="col-md-6 col-lg-4">
              <div class="task-card border rounded-3 p-3 shadow-sm" data-id="<%= task.id %>">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h5 class="task-card-title fw-medium mb-0"><%= task.title %></h5>
                  <span class="small text-uppercase px-2 py-1 rounded"
                        style="background: <%= task.status === 'completed' ? '#d4edda' : '#f0f0f0' %>;
                               color: <%= task.status === 'completed' ? '#155724' : '#333' %>;">
                    <%= task.status %>
                  </span>
                </div>

                <p class="task-card-desc text-secondary mb-2">
                  <%= task.description || 'No details' %>
                </p>

                <div class="task-card-meta small text-muted mb-3">
                  <div><strong>Assigned:</strong> <%= task.assigned_user_name || 'â€”' %></div>
                  <div><strong>Due:</strong> <%= task.due_at ? new Date(task.due_at).toLocaleDateString('en-NZ') : 'â€”' %></div>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-end gap-2">
                  <% if (String(task.status).toLowerCase().trim() === 'completed') { %>
                    <button class="btn btn-sm btn-outline-dark reopenTaskBtn" data-id="<%= task.id %>">
                      Reopen
                    </button>
                    <button class="btn btn-sm btn-outline-dark deleteTaskBtn" data-id="<%= task.id %>">
                      Delete
                    </button>
                  <% } else { %>
                    <button class="btn btn-sm btn-dark completeTaskBtn" data-id="<%= task.id %>">
                      Complete
                    </button>
                    <button class="btn btn-sm btn-outline-dark deleteTaskBtn" data-id="<%= task.id %>">
                      Delete
                    </button>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-secondary">No tasks yet.</p>
        <% } %>
      </div>
    </div>
  </section>
</main>

<!-- ðŸ§© Add/Edit Task Modal -->
<div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content border-0 shadow-sm">
      <form id="taskForm">
        <div class="modal-header border-0">
          <h5 class="modal-title" id="taskModalLabel">Add Task</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" id="taskId" />

          <div class="mb-3">
            <label for="taskTitle" class="form-label">Title</label>
            <input type="text" id="taskTitle" class="form-control border" required />
          </div>

          <div class="mb-3">
            <label for="taskDescription" class="form-label">Description</label>
            <textarea id="taskDescription" class="form-control border" rows="3"></textarea>
          </div>

          <div class="mb-3">
            <label for="taskAssignedTo" class="form-label">Assign To</label>
            <select id="taskAssignedTo" class="form-select border">
              <option value="">Select a user...</option>
              <% (users || []).forEach(u => { %>
                <option value="<%= u.id %>"><%= u.name %></option>
              <% }) %>
            </select>
          </div>

          <div class="mb-3">
            <label for="taskDueAt" class="form-label">Due Date</label>
            <input type="date" id="taskDueAt" class="form-control border" />
          </div>
        </div>

        <div class="modal-footer border-0">
          <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-dark">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

