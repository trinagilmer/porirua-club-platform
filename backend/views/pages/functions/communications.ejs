<!-- ðŸ“¬ pages/functions/communications.ejs -->
<% /* eslint-disable */ %>
<% locals.layout = 'layouts/main'; %>


    <!-- ðŸ”¹ Body -->
    <div class="function-body py-4 px-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h2 class="mb-0">Communications</h2>
          <p class="text-muted small mb-0">Log and send email updates for this function.</p>
        </div>
        <button class="btn btn-dark" id="newMessageBtn" type="button">
          <i class="bi bi-plus-lg me-1"></i>
          New message
        </button>
      </div>

      <!-- ðŸ“œ Communications List -->
      <div class="inbox">
        <div id="communicationsList" class="inbox-list">
          <% if (Array.isArray(messages) && messages.length > 0) { %>
            <% messages.forEach(function(m) { 
                var sender  = m.from_email || "Unknown sender";
                var recipient = Array.isArray(m.to_email) ? m.to_email.join(", ") : (m.to_email || "");
                var subject = m.subject || "(No subject)";
                var preview = (m.body_html || m.body || "").replace(/<[^>]+>/g, " ").replace(/\s+/g, " ").trim().slice(0, 160);
                var dt      = m.entry_date || m.created_at || m.sent_at || m.received_at;
                var msgId   = m.message_id || m.id;
            %>
              <!-- ðŸ“¨ Each message card links to detail -->
              <a class="message-card message-card--communication text-reset text-decoration-none border rounded p-3 mb-2"
                 href="/functions/<%= fn.id_uuid %>/communications/<%= encodeURIComponent(msgId) %>"
                 aria-label="Open message: <%= subject %>">
                <div class="msg-left flex-grow-1">
                  <p class="msg-subject fw-semibold mb-1 text-break"><%= subject %></p>
                  <div class="msg-address text-muted small mb-2">
                    <span class="d-block text-break"><strong>From:</strong> <%= sender %></span>
                    <% if (recipient) { %>
                      <span class="d-block text-break">To: <%= recipient %></span>
                    <% } %>
                  </div>
                  <div class="msg-preview text-muted small text-truncate"><%= preview %></div>
                </div>
                <div class="msg-date small text-muted text-end ps-3">
                  <div><%= dt ? new Date(dt).toLocaleDateString('en-NZ') : "" %></div>
                  <div><%= dt ? new Date(dt).toLocaleTimeString('en-NZ', { hour: '2-digit', minute: '2-digit' }) : "" %></div>
                </div>
              </a>
            <% }); %>
          <% } else { %>
            <p class="text-muted">No communications yet.</p>
          <% } %>
        </div>
      </div>
    </div>
  </section>

<!-- âœ‰ï¸ New Message Modal -->
<div class="modal fade" id="newMessageModal" tabindex="-1" aria-labelledby="newMessageLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <form id="newMessageForm">
        <div class="modal-header">
          <h5 class="modal-title" id="newMessageLabel">New Message</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" title="Close"></button>
        </div>

        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Recipients (comma-separated)</label>
            <input id="recipientsInput" type="text" class="form-control" placeholder="name@domain, other@domain" />
          </div>

          <div class="mb-3">
            <label class="form-label">Subject</label>
            <input id="newSubject" type="text" class="form-control" />
          </div>

          <div class="mb-3">
            <label class="form-label">Message</label>
            <div id="editor" style="height: 240px;"></div>
          </div>
        </div>

        <div class="modal-footer">
          <button class="btn btn-outline-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
          <button id="sendBtn" class="btn btn-primary" type="submit">Send</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- ðŸ§± Shared Modals -->
<%- include('../../partials/functions/modals', {
  fn,
  linkedContacts: linkedContacts || [],
  rooms: rooms || [],
  eventTypes: eventTypes || []
}) %>

<!-- âš™ï¸ Scripts -->
