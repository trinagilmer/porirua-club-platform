<!-- üõ†Ô∏è pages/functions/edit.ejs -->
<% locals.layout = 'layouts/main'; %>

<main class="function-layout-two-col">
  <!-- üß≠ Sidebar -->
  <aside class="function-sidebar">
    <%- include('../../partials/functions/sidebar', {
      fn,
      linkedContacts: linkedContacts || [],
      rooms: rooms || [],
      eventTypes: eventTypes || []
    }) %>
  </aside>

  <!-- üß© Workspace -->
  <section class="function-workspace">
    <!-- üîπ Tabs -->
    <%- include('../../partials/functions/tabs', {
      fn,
      activeTab: 'edit'
    }) %>

    <!-- üîπ Body -->
    <div class="function-body container py-4">
      <div class="workspace-header mb-4">
        <h1 class="mb-0">‚úèÔ∏è Edit Function</h1>
      </div>

      <!-- üßæ Edit Form -->
      <form method="POST" action="/functions/<%= fn.id %>/edit" class="card p-4 shadow-sm">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Event Name</label>
            <input type="text" name="event_name" class="form-control" value="<%= fn.event_name || '' %>" required />
          </div>

          <div class="col-md-3">
            <label class="form-label">Date</label>
            <input type="date" name="event_date" class="form-control" 
                   value="<%= fn.event_date ? fn.event_date.toISOString().slice(0,10) : '' %>" />
          </div>

          <div class="col-md-3">
            <label class="form-label">Time</label>
            <input type="time" name="event_time" class="form-control" value="<%= fn.event_time || '' %>" />
          </div>

          <div class="col-md-4">
            <label class="form-label">Attendees</label>
            <input type="number" name="attendees" class="form-control" value="<%= fn.attendees || '' %>" />
          </div>

          <div class="col-md-4">
            <label class="form-label">Total Price</label>
            <input type="number" step="0.01" name="totals_price" class="form-control" value="<%= fn.totals_price || 0 %>" />
          </div>

          <div class="col-md-4">
            <label class="form-label">Total Cost</label>
            <input type="number" step="0.01" name="totals_cost" class="form-control" value="<%= fn.totals_cost || 0 %>" />
          </div>

          <div class="col-md-6">
            <label class="form-label">Status</label>
            <select name="status" class="form-select">
              <% ['lead','qualified','confirmed','balance_due','completed'].forEach(st => { %>
                <option value="<%= st %>" <%= fn.status === st ? 'selected' : '' %>>
                  <%= st.replace('_', ' ') %>
                </option>
              <% }) %>
            </select>
          </div>
        </div>

        <div class="mt-4 d-flex justify-content-end gap-2">
          <a href="/functions/<%= fn.id %>" class="btn btn-outline-secondary">Cancel</a>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </form>
    </div>
  </section>
</main>

<!-- üß± Modals (shared across all function pages) -->
<%- include('../../partials/functions/modals', {
  fn,
  linkedContacts: linkedContacts || [],
  rooms: rooms || [],
  eventTypes: eventTypes || []
}) %>

<!-- ‚öôÔ∏è Scripts -->
<script>
  window.fnContext = { id: <%- JSON.stringify(fn.id) %> };
</script>
<script src="/js/functions/edit.js" defer></script>
