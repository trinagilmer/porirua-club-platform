<%
  const reportGroups = {};
  (reportCards || []).forEach(function(card) {
    const group = card.category || "Other";
    if (!reportGroups[group]) reportGroups[group] = [];
    reportGroups[group].push(card);
  });
  function buildLink(type) {
    const params = new URLSearchParams({
      type,
      start_date: filters.startDate || "",
      end_date: filters.endDate || "",
    });
    return `/reports?${params.toString()}`;
  }
%>
<div class="container-fluid py-4 reports-page">
  <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
    <div>
      <h1 class="mb-1">Reports</h1>
      <p class="text-muted mb-0">Pick a report and export to Excel when you need to share data.</p>
    </div>
    <div class="d-flex gap-2">
      <a class="btn btn-outline-primary" href="/calendar">
        <i class="bi bi-calendar3 me-1"></i>
        Back to calendar
      </a>
      <a class="btn btn-outline-secondary" href="/settings">
        <i class="bi bi-gear me-1"></i>
        Settings
      </a>
    </div>
  </div>

  <section class="card shadow-sm mb-4">
    <div class="card-body">
      <form class="row g-3 align-items-end" method="GET" action="/reports">
        <div class="col-md-3 col-sm-6">
          <label class="form-label">Default start date</label>
          <input type="date" name="start_date" class="form-control" value="<%= filters.startDate %>">
        </div>
        <div class="col-md-3 col-sm-6">
          <label class="form-label">Default end date</label>
          <input type="date" name="end_date" class="form-control" value="<%= filters.endDate %>">
        </div>
        <div class="col-md-4 col-sm-12">
          <p class="text-muted small mb-0">
            Use these dates when launching any report below. You can override dates in the report view.
          </p>
        </div>
        <div class="col-md-2 col-sm-6">
          <button type="submit" class="btn btn-outline-primary w-100">Update dates</button>
        </div>
      </form>
    </div>
  </section>

  <% Object.keys(reportGroups).forEach(function(group) { %>
    <section class="mb-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 mb-0"><%= group %></h2>
      </div>
      <div class="row g-3">
        <% reportGroups[group].forEach(function(card) { %>
          <div class="col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <div class="d-flex align-items-center gap-2 mb-2">
                  <div class="rounded-circle bg-light text-primary d-inline-flex align-items-center justify-content-center" style="width:40px;height:40px;">
                    <i class="bi <%= card.icon %>"></i>
                  </div>
                  <h3 class="h6 mb-0"><%= card.title %></h3>
                </div>
                <p class="text-muted small flex-grow-1"><%= card.description %></p>
                <a class="btn btn-outline-primary mt-2" href="<%= buildLink(card.type) %>">
                  Run report
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
  <% }) %>
</div>
