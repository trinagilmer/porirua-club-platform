<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head', { title: message.subject || 'Message Detail' }) %>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/inbox.css">

  <style>
    /* --- Message Detail Layout --- */
    .message-detail-container {
      max-width: 900px;
      margin: 40px auto;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
      padding: 30px 40px;
    }

    .message-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      border-bottom: 1px solid #e5e7eb;
      padding-bottom: 12px;
    }

    .message-header h1 {
      font-size: 1.5rem;
      color: #0f766e;
      margin: 0;
      flex: 1;
    }

    .btn {
      padding: 8px 14px;
      border-radius: 6px;
      font-size: 0.95rem;
      cursor: pointer;
      transition: all 0.2s ease;
      text-decoration: none;
    }

    .btn-primary {
      background: #0f766e;
      color: #fff;
      border: none;
    }
    .btn-primary:hover { background: #115e59; }

    .btn-outline {
      border: 1px solid #0f766e;
      color: #0f766e;
      background: #fff;
    }
    .btn-outline:hover { background: #e6fffa; }

    .message-meta {
      font-size: 0.9rem;
      color: #555;
      margin-bottom: 16px;
      line-height: 1.6;
    }

    .message-body {
      white-space: pre-wrap;
      line-height: 1.6;
      color: #333;
      margin-bottom: 30px;
      font-size: 1rem;
    }

    .linked-banner {
      border-radius: 8px;
      padding: 12px 16px;
      margin: 10px 0 20px;
      font-size: 0.95rem;
    }

    .linked-banner strong {
      color: #0f766e;
    }

    .main-header .logo-img {
      height: 48px !important;
      width: auto !important;
    }
  </style>
</head>

<body>
  <!-- ‚úÖ Header -->
  <%- include('../partials/header', { active: 'inbox', user: user }) %>

  <main class="main-content">
    <div class="message-detail-container">

      <!-- Header -->
      <div class="message-header">
        <h1><%= message.subject || '(No Subject)' %></h1>
<div class="d-flex flex-wrap gap-2 align-items-center">

  <a href="/inbox" class="btn btn-outline">‚Üê Back</a>
  <button class="btn btn-outline" data-bs-toggle="modal" data-bs-target="#linkContactModal">üìá Link Contact</button>
  <button class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#linkFunctionModal">üß© Link Function</button>

  <!-- Grouped Reply buttons -->
  <div class="btn-group" role="group" aria-label="Reply options">
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#replyMessageModal" id="replyBtn">üí¨ Reply</button>
    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#replyMessageModal" id="replyAllBtn">üí¨ Reply All</button>
  </div>

</div>


      </div>

      <!-- Linked Information Banner -->
      <% if (message.contact_name || message.function_name) { %>
        <div class="alert alert-info linked-banner">
          <% if (message.contact_name) { %>
            üìá Linked to: <strong><%= message.contact_name %></strong>
          <% } %>
          <% if (message.function_name) { %>
            <br>üß© Function: <strong><%= message.function_name %></strong>
          <% } %>
        </div>
      <% } else { %>
        <div class="alert alert-warning linked-banner">
          ‚ö†Ô∏è This message is not yet linked to any contact or function.
        </div>
      <% } %>

      <!-- Metadata -->
      <div class="message-meta">
        <p><strong>From:</strong> <%= message.from_email || 'Unknown sender' %></p>
        <p><strong>To:</strong> <%= message.to_email || 'Unknown recipient' %></p>
        <p><strong>Date:</strong> <%= message.created_at ? new Date(message.created_at).toLocaleString() : '' %></p>
      </div>

<!-- Message Body -->
<div class="message-body">
  <% if (message.body_html) { %>
    <div class="formatted-body"><%- message.body_html %></div>
  <% } else { %>
    <pre><%= message.body || '(No message body)' %></pre>
  <% } %>
</div>

<!-- Attachments -->
<% if (message.attachments && message.attachments.length > 0) { %>
  <div class="attachments mt-4">
    <h5 class="fw-bold mb-3">üìé Attachments</h5>
    <ul class="list-group list-group-flush">
      <% message.attachments.forEach(a => { %>
        <li class="list-group-item">
          <a href="<%= a.file_url || a.filePath || '#' %>" target="_blank">
            <%= a.file_name || a.name || "Unnamed attachment" %>
          </a>
        </li>
      <% }) %>
    </ul>
  </div>
<% } %>

</div><!-- üß© Conversation Thread -->
<% if (thread && thread.length > 1) { %>
  <div class="conversation-thread mt-5">
    <h5 class="fw-bold mb-3">üßµ Conversation History</h5>

    <% thread.forEach((t, idx) => { %>
      <div class="message-bubble mb-3 <%= t.message_type === 'outbound' ? 'outbound' : 'inbound' %>">
        <div class="bubble-header d-flex justify-content-between align-items-center">
          <div>
            <% if (t.message_type === 'outbound') { %>
              <strong>You ‚Üí</strong> <%= t.to_email || '(Unknown)' %>
            <% } else { %>
              <strong><%= t.from_email || '(Unknown)' %></strong> ‚Üí You
            <% } %>
          </div>
          <small class="text-muted">
            <%= new Date(t.created_at).toLocaleString('en-NZ', { dateStyle: 'medium', timeStyle: 'short' }) %>
          </small>
        </div>

        <div class="bubble-body mt-2">
          <% if (t.body_html) { %>
            <div class="formatted-body collapse <%= idx === thread.length - 1 ? 'show' : '' %>" id="msgBody-<%= t.id %>">
              <%- t.body_html %>
            </div>
          <% } else { %>
            <pre class="collapse <%= idx === thread.length - 1 ? 'show' : '' %>" id="msgBody-<%= t.id %>">
              <%= t.body || '(No content)' %>
            </pre>
          <% } %>
        </div>

        <div class="bubble-footer text-end mt-2">
          <button class="btn btn-sm btn-outline-secondary" 
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#msgBody-<%= t.id %>"
                  aria-expanded="<%= idx === thread.length - 1 ? 'true' : 'false' %>"
                  aria-controls="msgBody-<%= t.id %>">
            <%= idx === thread.length - 1 ? 'Collapse' : 'Expand' %>
          </button>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>
</main>


<!-- üí¨ Reply Message Modal (Enhanced with Quill) -->
<div class="modal fade" id="replyMessageModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header" style="background:#0f766e; color:#fff;">
        <h5 class="modal-title">Reply to Message</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <form action="/inbox/reply/<%= message.id %>" method="POST" enctype="multipart/form-data" onsubmit="return handleReplySubmit()">
        <div class="modal-body">
          <input type="hidden" name="body_html" id="bodyHtmlInput">
          <input type="hidden" name="redirect" value="/inbox/<%= message.id %>?sent=true">

         <div class="mb-3">
  <label class="form-label fw-semibold">To</label>
  <input type="email" name="to_email" class="form-control" value="<%= message.from_email || '' %>" required>
</div>

<div class="mb-3">
  <label class="form-label fw-semibold">CC</label>
  <input type="email" name="cc_email" class="form-control" placeholder="Add CC (optional)">
</div>

<div class="mb-3">
  <label class="form-label fw-semibold">BCC</label>
  <input type="email" name="bcc_email" class="form-control" placeholder="Add BCC (optional)">
</div>

<div class="mb-3">
  <label class="form-label fw-semibold">Subject</label>
  <input type="text" name="subject" class="form-control" value="Re: <%= message.subject || '' %>" required>
</div>


          <div class="mb-3">
            <label class="form-label fw-semibold">Message</label>
            <div id="editor" class="quill-editor" style="height:200px;"></div>
          </div>

          <div class="mb-3">
            <label class="form-label fw-semibold">Attachment (optional)</label>
            <input type="file" name="attachment" class="form-control">
          </div>
        </div>

        <div class="modal-footer" style="background:#f8f9fa;">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success">üì§ Send Reply</button>
        </div>
      </form>
    </div>
  </div>
</div>


  <!-- ‚úÖ New Modals -->
  <%- include('../partials/linkContactModal', { message, contacts, user }) %>
  <%- include('../partials/linkFunctionModal', { message, functions, user }) %>
<!-- ‚úÖ Bootstrap Toast Container -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1080">
  <div id="linkSuccessToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body" id="linkToastBody">
        ‚úÖ Linked successfully!
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  console.log("üß† Message Detail Scripts Initializing...");

  // ‚úÖ Toast for Linked Contact/Function Success
  const urlParams = new URLSearchParams(window.location.search);
  const successType = urlParams.get("linked");

  if (successType) {
    const toastEl = document.getElementById("linkSuccessToast");
    const toastBody = document.getElementById("linkToastBody");
    const toast = new bootstrap.Toast(toastEl);

    if (successType === "contact") toastBody.textContent = "‚úÖ Contact linked successfully!";
    if (successType === "function") toastBody.textContent = "‚úÖ Function linked successfully!";
    if (successType === "both") toastBody.textContent = "‚úÖ Contact & Function linked successfully!";

    toast.show();
    const cleanUrl = window.location.pathname;
    window.history.replaceState({}, document.title, cleanUrl);
  }

  // ‚úÖ Initialize Quill Editor (Reply Modal)
  const editorEl = document.getElementById("editor");
  if (editorEl) {
    console.log("üñãÔ∏è Initializing Quill editor for Reply...");
    window.quill = new Quill("#editor", {
      theme: "snow",
      placeholder: "Write your reply...",
      modules: {
        toolbar: [
          ["bold", "italic", "underline"],
          [{ list: "ordered" }, { list: "bullet" }],
          ["link"]
        ]
      }
    });
  } else {
    console.log("‚ö†Ô∏è No reply editor found on this page.");
  }

  // ‚úÖ Toast for successful email reply
  if (urlParams.get("sent") === "true") {
    const toast = document.createElement("div");
    toast.className = "toast align-items-center text-bg-success border-0 position-fixed bottom-0 end-0 m-3 p-3 fade show";
    toast.innerHTML = `<div>‚úÖ Reply sent successfully</div>`;
    document.body.appendChild(toast);
    setTimeout(() => toast.classList.remove("show"), 3000);
  }
});

// ‚úâÔ∏è Handle Quill Reply Form Submission
function handleReplySubmit() {
  const html = window.quill?.root?.innerHTML.trim();
  if (!html || html === "<p><br></p>") {
    alert("Please write a message before sending.");
    return false;
  }
  document.getElementById("bodyHtmlInput").value = html;
  return true;
}
</script>
<script>
  // üß† Toggle button text dynamically when expanding/collapsing
  document.addEventListener('click', (e) => {
    const btn = e.target.closest('[data-bs-toggle="collapse"]');
    if (!btn) return;

    const targetId = btn.getAttribute('data-bs-target');
    const target = document.querySelector(targetId);
    if (!target) return;

    // Small delay to let Bootstrap toggle complete
    setTimeout(() => {
      const isExpanded = target.classList.contains('show');
      btn.textContent = isExpanded ? 'Collapse' : 'Expand';
    }, 200);
  });
</script>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const replyBtn = document.getElementById("replyBtn");
    const replyAllBtn = document.getElementById("replyAllBtn");

    const toField = document.querySelector('input[name="to_email"]');
    const ccField = document.querySelector('input[name="cc_email"]');
    const subjectField = document.querySelector('input[name="subject"]');

    // üí¨ Standard Reply
    if (replyBtn) {
      replyBtn.addEventListener("click", () => {
        if (toField) toField.value = "<%= message.from_email || '' %>";
        if (ccField) ccField.value = "";
        if (subjectField && !subjectField.value.startsWith("Re: ")) {
          subjectField.value = "Re: <%= message.subject || '' %>";
        }
      });
    }

    // üí¨ Reply All (includes original sender + other recipients)
    if (replyAllBtn) {
      replyAllBtn.addEventListener("click", () => {
        const senderEmail = "<%= SENDER_EMAIL || 'events@poriruaclub.co.nz' %>";
        const originalFrom = "<%= message.from_email || '' %>";
        const originalTo = "<%= message.to_email || '' %>";

        let toList = [];

        if (originalFrom && originalFrom.toLowerCase() !== senderEmail.toLowerCase()) {
          toList.push(originalFrom);
        }
        if (originalTo && originalTo.toLowerCase() !== senderEmail.toLowerCase()) {
          toList.push(originalTo);
        }

        if (toField) toField.value = [...new Set(toList)].join(", ");
        if (ccField) ccField.value = "<%= message.cc_recipients || '' %>"; // optional if available
        if (subjectField && !subjectField.value.startsWith("Re: ")) {
          subjectField.value = "Re: <%= message.subject || '' %>";
        }
      });
    }
  });
</script>


<%- include('../partials/footer') %>
</body>
</html>
