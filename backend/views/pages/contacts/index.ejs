<div class="container-fluid py-4 contacts-page">
  <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-2">
    <div>
      <h1 class="mb-1">Contacts</h1>
      <p class="text-muted mb-0">Manage every person connected to your functions and bookings.</p>
    </div>
    <div class="d-flex flex-wrap gap-2">
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#contactCreateModal">
        + Add contact
      </button>
      <a class="btn btn-outline-secondary" href="/contacts/export">
        <i class="bi bi-file-earmark-spreadsheet me-1"></i> Export Excel
      </a>
      <label class="btn btn-outline-primary mb-0">
        <i class="bi bi-upload me-1"></i> Import CSV
        <input type="file" id="contactImportInput" accept=".csv,text/csv" hidden>
      </label>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-lg-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <label class="form-label">Search contacts</label>
          <div class="input-group mb-3">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" placeholder="Search by name or email" id="contactSearch">
          </div>
          <div class="contact-list-wrapper">
            <ul class="list-group contact-list" id="contactList">
              <% if (!contacts || !contacts.length) { %>
                <li class="list-group-item text-muted">No contacts recorded yet.</li>
              <% } else { %>
                <% contacts.forEach(function(contact) { %>
                  <li
                    class="list-group-item list-group-item-action d-flex justify-content-between align-items-start contact-row"
                    data-contact-id="<%= contact.id %>"
                    data-contact-name="<%= contact.name %>"
                    data-contact-email="<%= contact.email || '' %>"
                  >
                    <div>
                      <div class="fw-semibold"><%= contact.name %></div>
                      <small class="text-muted d-block"><%= contact.email || 'No email' %></small>
                    </div>
                    <div class="text-end">
                      <small class="badge rounded-pill bg-light text-dark">
                        <%= contact.function_count || 0 %> functions
                      </small>
                    </div>
                  </li>
                <% }) %>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-8">
      <div class="card shadow-sm mb-4">
      <div class="card-body" id="contactDetailPlaceholder" <%= contacts && contacts.length ? '' : '' %>>
        <div class="text-center py-5 text-muted">
          <i class="bi bi-people display-5 d-block mb-2"></i>
          Select a contact to view their details.
        </div>
        </div>
        <div class="card-body d-none" id="contactDetailPanel">
          <div class="d-flex flex-wrap justify-content-between align-items-start mb-3">
            <div>
              <h3 class="mb-1" data-contact-field="name"></h3>
              <p class="mb-1">
                <a href="#" id="contactEmailLink" class="text-decoration-none" target="_blank" rel="noopener">â€”</a>
              </p>
              <p class="mb-0 text-muted" id="contactPhoneText">No phone</p>
              <span class="badge rounded-pill mt-2" id="contactOptOutBadge">Survey opt-in</span>
            </div>
            <div class="btn-group">
              <a class="btn btn-outline-primary" id="emailContactBtn" target="_blank" rel="noopener">
                <i class="bi bi-envelope me-1"></i>Email
              </a>
              <button class="btn btn-outline-danger" id="deleteContactBtn">
                <i class="bi bi-trash me-1"></i>Delete
              </button>
            </div>
          </div>

          <form id="contactEditForm" class="border rounded-3 p-3 mb-4 bg-light">
            <input type="hidden" id="contactEditId" name="contact_id">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" name="name" id="contactEditName" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">Company</label>
                <input type="text" class="form-control" name="company" id="contactEditCompany">
              </div>
              <div class="col-md-6">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" name="email" id="contactEditEmail">
              </div>
              <div class="col-md-6">
                <label class="form-label">Phone</label>
                <input type="text" class="form-control" name="phone" id="contactEditPhone">
              </div>
              <div class="col-12">
                <div class="form-check form-switch mt-2">
                  <input class="form-check-input" type="checkbox" role="switch" id="contactEditOptOut" name="feedback_opt_out">
                  <label class="form-check-label" for="contactEditOptOut">Opt this contact out of automatic surveys</label>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-end gap-2 mt-3">
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
          </form>

          <div class="row g-3">
            <div class="col-md-6">
              <div class="border rounded-3 p-3 h-100">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <h5 class="mb-0">Functions</h5>
                  <span class="badge bg-light text-dark" id="contactFunctionCount">0</span>
                </div>
                <ul class="list-unstyled small mb-0" id="contactFunctionsList">
                  <li class="text-muted">No linked functions.</li>
                </ul>
              </div>
            </div>
            <div class="col-md-6">
              <div class="border rounded-3 p-3 h-100">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <h5 class="mb-0">Restaurant bookings</h5>
                  <span class="badge bg-light text-dark" id="contactBookingCount">0</span>
                </div>
                <ul class="list-unstyled small mb-0" id="contactBookingsList">
                  <li class="text-muted">No matching bookings.</li>
                </ul>
              </div>
            </div>
          </div>

          <div class="border rounded-3 p-3 mt-3">
            <h5 class="mb-2">Entertainment events</h5>
            <p class="text-muted small mb-0">Entertainment contact tracking is coming soon.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Create Contact Modal -->
<div class="modal fade" id="contactCreateModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form class="modal-content" id="contactCreateForm">
      <div class="modal-header">
        <h5 class="modal-title">Add contact</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label class="form-label">Name</label>
          <input type="text" class="form-control" name="name" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" class="form-control" name="email">
        </div>
      <div class="mb-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" name="phone">
      </div>
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" name="feedback_opt_out" id="contactCreateOptOut">
        <label class="form-check-label" for="contactCreateOptOut">Opt this contact out of surveys</label>
      </div>
      <div>
        <label class="form-label">Company</label>
        <input type="text" class="form-control" name="company">
      </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save contact</button>
      </div>
    </form>
  </div>
</div>

<script>
  window.initialContacts = <%- JSON.stringify(contacts || []) %>;
</script>
