<main class="settings-feedback py-4">
  <div class="d-flex justify-content-between align-items-center flex-wrap mb-4 gap-2">
    <div>
      <h1 class="mb-1">Feedback Report</h1>
      <p class="text-muted mb-0">Review opt-outs, sending status, and the latest survey responses.</p>
    </div>
    <div class="d-flex flex-wrap gap-2">
      <button type="button" class="btn btn-outline-primary btn-sm" onclick="window.print()">Print / Export PDF</button>
      <a href="/settings/feedback" class="btn btn-outline-secondary btn-sm">Automation &amp; questions</a>
      <a href="/settings/feedback/templates/email" class="btn btn-outline-secondary btn-sm">Templates</a>
      <a href="/settings/overview" class="btn btn-link text-decoration-none">&larr; Back to overview</a>
    </div>
  </div>

  <% if (flashMessage) { %>
    <div class="alert alert-<%= flashType === 'error' ? 'danger' : flashType || 'success' %>">
      <%= flashMessage %>
    </div>
  <% } %>

  <section class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="row g-3">
        <% const summaryBlocks = [
          { title: 'Overall', data: summaryOverall, accent: '#6bb4de' },
          { title: 'Functions', data: summaryFunctions, accent: '#59c27a' },
          { title: 'Restaurant', data: summaryRestaurant, accent: '#e79a5a' }
        ]; %>
        <% summaryBlocks.forEach(function(block) { %>
          <div class="col-12 col-md-4">
            <div class="p-3 rounded border" style="border-color: rgba(0,0,0,0.08);">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <p class="mb-0 fw-semibold" style="font-size: 14px;"><%= block.title %></p>
                <span class="badge" style="background: <%= block.accent %>20; color: <%= block.accent %>;">KPI</span>
              </div>
              <div class="row g-2">
                <div class="col-6">
                  <p class="text-muted small mb-0">Responses</p>
                  <h5 class="mb-0"><%= block.data?.count || 0 %></h5>
                </div>
                <div class="col-6">
                  <p class="text-muted small mb-0">Avg</p>
                  <h5 class="mb-0"><%= block.data?.avgOverall ? block.data.avgOverall + '/5' : '-' %></h5>
                </div>
                <div class="col-6">
                  <p class="text-muted small mb-0">NPS</p>
                  <h5 class="mb-0"><%= typeof block.data?.nps === 'number' ? block.data.nps : '-' %></h5>
                </div>
                <div class="col-6">
                  <p class="text-muted small mb-0">Recommend</p>
                  <h5 class="mb-0"><%= typeof block.data?.recommendRate === 'number' ? block.data.recommendRate + '%' : '-' %></h5>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
      <div class="row g-3 mt-3">
        <div class="col-12 col-md-4">
          <p class="text-muted small mb-1">Completion rate</p>
          <h5 class="mb-0"><%= completionRate === null ? '-' : completionRate + '%' %></h5>
        </div>
        <div class="col-12 col-md-4">
          <p class="text-muted small mb-1">Positive (>=4)</p>
          <h5 class="mb-0"><%= positiveCount || 0 %></h5>
        </div>
        <div class="col-12 col-md-4">
          <p class="text-muted small mb-1">Low ratings (<=2)</p>
          <h5 class="mb-0 text-danger"><%= negativeCount || 0 %></h5>
        </div>
      </div>
      <% if (topIssues && topIssues.length) { %>
        <hr>
        <div>
          <p class="text-muted small mb-2">Top themes</p>
          <div class="d-flex flex-wrap gap-2">
            <% topIssues.forEach(function(item) { %>
              <span class="badge bg-light text-dark"><%= item.label %> (<%= item.count %>)</span>
            <% }); %>
          </div>
        </div>
      <% } %>
      <% if (filters && (filters.from || filters.to)) { %>
        <div class="mt-2">
          <small class="text-muted">Date range: <%= filters.from || 'Any' %> to <%= filters.to || 'Any' %></small>
        </div>
      <% } %>
    </div>
  </section>

  <section class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="row g-3 align-items-center">
        <div class="col-md-4">
          <h5 class="mb-1">Contact preferences</h5>
          <p class="text-muted mb-0">
            <strong><%= contactStats?.optOutCount || 0 %></strong> contacts have opted out of feedback emails.
          </p>
          <p class="small text-muted mb-0">Opt-outs can be managed on the Contacts page. Automatic emails respect per-contact and per-booking toggles.</p>
        </div>
        <div class="col-md-8">
          <div class="d-flex flex-wrap gap-2">
            <% Object.keys(statusCounts || {}).forEach(function(status) { %>
              <span class="badge bg-light text-dark text-uppercase">
                <%= status %>: <%= statusCounts[status] %>
              </span>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="row g-4">
        <div class="col-12 col-lg-6">
          <h6 class="mb-2">Trend (avg rating & low counts)</h6>
          <canvas id="trendChart" height="140"></canvas>
        </div>
        <div class="col-12 col-lg-6">
          <h6 class="mb-2">Issues</h6>
          <canvas id="issueChart" height="140"></canvas>
        </div>
        <div class="col-12">
          <h6 class="mb-2">By type</h6>
          <canvas id="typeChart" height="100"></canvas>
        </div>
      </div>
    </div>
  </section>

  <section class="card shadow-sm print-hide">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h5 class="mb-0">Recent feedback</h5>
          <p class="text-muted small mb-0">Latest requests and responses across functions and restaurant bookings.</p>
        </div>
        <div class="d-flex gap-2">
          <form class="d-flex flex-wrap gap-2 align-items-end" action="/settings/feedback/activity" method="GET">
            <div>
              <label class="form-label">Type</label>
              <select class="form-select form-select-sm" name="type">
                <option value="">All</option>
                <option value="function" <%= (filters?.type === 'function') ? 'selected' : '' %>>Function</option>
                <option value="restaurant" <%= (filters?.type === 'restaurant') ? 'selected' : '' %>>Restaurant</option>
              </select>
            </div>
            <div>
              <label class="form-label">Status</label>
              <select class="form-select form-select-sm" name="status">
                <option value="">All</option>
                <option value="pending" <%= (filters?.status === 'pending') ? 'selected' : '' %>>Pending</option>
                <option value="sent" <%= (filters?.status === 'sent') ? 'selected' : '' %>>Sent</option>
                <option value="completed" <%= (filters?.status === 'completed') ? 'selected' : '' %>>Completed</option>
              </select>
            </div>
            <div>
              <label class="form-label">Rating min</label>
              <input type="number" min="1" max="5" class="form-control form-control-sm" name="min_rating" value="<%= filters?.min_rating || '' %>">
            </div>
            <div>
              <label class="form-label">Rating max</label>
              <input type="number" min="1" max="5" class="form-control form-control-sm" name="max_rating" value="<%= filters?.max_rating || '' %>">
            </div>
            <div>
              <label class="form-label">From</label>
              <input type="date" class="form-control form-control-sm" name="from" value="<%= filters?.from || '' %>">
            </div>
            <div>
              <label class="form-label">To</label>
              <input type="date" class="form-control form-control-sm" name="to" value="<%= filters?.to || '' %>">
            </div>
            <div class="d-flex gap-2">
              <button class="btn btn-primary btn-sm" type="submit">Filter</button>
              <a class="btn btn-outline-secondary btn-sm" href="/settings/feedback/activity">Clear</a>
              <a class="btn btn-outline-success btn-sm" href="/settings/feedback/export?<%= new URLSearchParams(filters || {}).toString() %>">Export CSV</a>
            </div>
          </form>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-sm align-middle mb-0">
          <thead>
            <tr>
              <th>Sent</th>
              <th>Type</th>
              <th>Event / Booking</th>
              <th>Contact</th>
              <th>Rating</th>
              <th>NPS</th>
              <th>Status</th>
              <th>Comments</th>
            </tr>
          </thead>
          <tbody>
            <% if (!responses || !responses.length) { %>
              <tr>
                <td colspan="8" class="text-muted text-center py-4">No feedback requests yet.</td>
              </tr>
            <% } else { %>
              <% responses.forEach(function(response) { %>
                <tr>
                  <td>
                    <%= response.sent_at ? new Date(response.sent_at).toLocaleDateString('en-NZ', { month: 'short', day: 'numeric' }) : '—' %>
                  </td>
                  <td class="text-capitalize"><%= response.entity_type %></td>
                  <td>
                    <div class="fw-semibold"><%= response.event_name || '-' %></div>
                    <% if (response.event_date) { %>
                      <small class="text-muted"><%= new Date(response.event_date).toLocaleDateString('en-NZ', { month: 'short', day: 'numeric' }) %></small>
                    <% } %>
                  </td>
                  <td>
                    <div><%= response.contact_name || response.contact_email || '-' %></div>
                    <% if (response.contact_avg_overall) { %>
                      <small class="text-muted">Avg: <%= response.contact_avg_overall %>/5 (<%= response.contact_count %>)</small>
                    <% } %>
                  </td>
                  <td>
                    <% if (response.rating_overall) { %>
                      <strong class="<%= response.rating_overall <=2 ? 'text-danger' : '' %>"><%= response.rating_overall %>/5</strong>
                      <% if (response.rating_service) { %><br><small class="text-muted">Service: <%= response.rating_service %>/5</small><% } %>
                    <% } else { %>
                      <span class="text-muted">-</span>
                    <% } %>
                  </td>
                  <td>
                    <% if (response.nps_score || response.nps_score === 0) { %>
                      <strong><%= response.nps_score %></strong>
                      <% if (response.contact_avg_nps) { %><br><small class="text-muted">Avg: <%= response.contact_avg_nps %></small><% } %>
                    <% } else { %>
                      <span class="text-muted">-</span>
                    <% } %>
                  </td>
                  <td><span class="badge <%= response.rating_overall && response.rating_overall <=2 ? 'bg-danger text-white' : 'bg-light text-dark' %> text-uppercase"><%= response.status %></span></td>
                  <td class="small">
                    <% if (response.comments) { %>
                      <div class="<%= response.rating_overall && response.rating_overall <=2 ? 'text-danger' : 'text-muted' %>">
                        <%= response.comments.slice(0, 140) %><%= response.comments.length > 140 ? '…' : '' %>
                      </div>
                    <% } else { %>
                      <span class="text-muted">-</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="mt-3">
        <form action="/settings/feedback/clear" method="POST" class="d-flex flex-wrap align-items-center gap-2">
          <input type="hidden" name="confirm" value="yes">
          <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete all feedback requests and responses? This cannot be undone.');">
            Delete all feedback (admin only)
          </button>
          <small class="text-muted">Use only to clear test data.</small>
        </form>
      </div>
    </div>
  </section>
</main>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  (function() {
    const chartData = <%- JSON.stringify(chartData || {}) %>;
    const trendCtx = document.getElementById('trendChart')?.getContext('2d');
    if (trendCtx && (chartData.trendLabels || []).length) {
      new Chart(trendCtx, {
        type: 'line',
        data: {
          labels: chartData.trendLabels,
          datasets: [
            {
              label: 'Avg rating',
              data: chartData.trendAvg,
              borderColor: '#6bb4de',
              backgroundColor: 'rgba(107,180,222,0.15)',
              tension: 0.3,
              fill: true,
            },
            {
              label: 'Low ratings (<=2)',
              data: chartData.trendLows,
              type: 'bar',
              backgroundColor: 'rgba(226,91,91,0.4)',
              borderColor: '#e25b5b',
              borderWidth: 1,
              yAxisID: 'y1'
            }
          ]
        },
        options: {
          responsive: true,
          interaction: { mode: 'index', intersect: false },
          stacked: false,
          scales: {
            y: { beginAtZero: true, suggestedMax: 5, title: { display: true, text: 'Avg rating' } },
            y1: { beginAtZero: true, position: 'right', grid: { drawOnChartArea: false }, title: { display: true, text: 'Low ratings' } }
          },
          plugins: { legend: { display: true } }
        }
      });
    }

    const issueCtx = document.getElementById('issueChart')?.getContext('2d');
    if (issueCtx && (chartData.issueLabels || []).length) {
      new Chart(issueCtx, {
        type: 'bar',
        data: {
          labels: chartData.issueLabels,
          datasets: [{
            label: 'Mentions',
            data: chartData.issueCounts,
            backgroundColor: 'rgba(231, 154, 90, 0.5)',
            borderColor: '#e79a5a',
            borderWidth: 1
          }]
        },
        options: { scales: { y: { beginAtZero: true } } }
      });
    }

    const typeCtx = document.getElementById('typeChart')?.getContext('2d');
    if (typeCtx && (chartData.typeLabels || []).length) {
      new Chart(typeCtx, {
        type: 'bar',
        data: {
          labels: chartData.typeLabels,
          datasets: [
            { label: 'Completed', data: chartData.typeCompleted, backgroundColor: 'rgba(107,180,222,0.6)' },
            { label: 'Low (<=2)', data: chartData.typeLow, backgroundColor: 'rgba(226,91,91,0.6)' }
          ]
        },
        options: { responsive: true, scales: { y: { beginAtZero: true } } }
      });
    }
  })();
</script>

