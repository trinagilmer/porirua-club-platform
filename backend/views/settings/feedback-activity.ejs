<main class="settings-feedback py-4">
  <div class="d-flex justify-content-between align-items-center flex-wrap mb-4 gap-2">
    <div>
      <h1 class="mb-1">Feedback activity</h1>
      <p class="text-muted mb-0">Review opt-outs, sending status, and the latest survey responses.</p>
    </div>
    <div class="d-flex flex-wrap gap-2">
      <a href="/settings/feedback" class="btn btn-outline-secondary btn-sm">Automation &amp; questions</a>
      <a href="/settings/feedback/templates/email" class="btn btn-outline-secondary btn-sm">Templates</a>
      <a href="/settings/overview" class="btn btn-link text-decoration-none">&larr; Back to overview</a>
    </div>
  </div>

  <% if (flashMessage) { %>
    <div class="alert alert-<%= flashType === 'error' ? 'danger' : flashType || 'success' %>">
      <%= flashMessage %>
    </div>
  <% } %>

  <section class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-6 col-md-3">
          <p class="text-muted small mb-1">Responses</p>
          <h4 class="mb-0"><%= summary?.count || 0 %></h4>
        </div>
        <div class="col-6 col-md-3">
          <p class="text-muted small mb-1">Avg overall</p>
          <h4 class="mb-0"><%= summary?.avgOverall ? summary.avgOverall + '/5' : '-' %></h4>
        </div>
        <div class="col-6 col-md-3">
          <p class="text-muted small mb-1">Recommend rate</p>
          <h4 class="mb-0"><%= typeof summary?.recommendRate === 'number' ? summary.recommendRate + '%' : '-' %></h4>
        </div>
        <div class="col-6 col-md-3">
          <p class="text-muted small mb-1">NPS</p>
          <h4 class="mb-0"><%= typeof summary?.nps === 'number' ? summary.nps : '-' %></h4>
        </div>
      </div>
      <% if (topIssues && topIssues.length) { %>
        <hr>
        <div>
          <p class="text-muted small mb-2">Top themes</p>
          <div class="d-flex flex-wrap gap-2">
            <% topIssues.forEach(function(item) { %>
              <span class="badge bg-light text-dark"><%= item.label %> (<%= item.count %>)</span>
            <% }); %>
          </div>
        </div>
      <% } %>
    </div>
  </section>

  <section class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="row g-3 align-items-center">
        <div class="col-md-4">
          <h5 class="mb-1">Contact preferences</h5>
          <p class="text-muted mb-0">
            <strong><%= contactStats?.optOutCount || 0 %></strong> contacts have opted out of feedback emails.
          </p>
          <p class="small text-muted mb-0">Opt-outs can be managed on the Contacts page. Automatic emails respect per-contact and per-booking toggles.</p>
        </div>
        <div class="col-md-8">
          <div class="d-flex flex-wrap gap-2">
            <% Object.keys(statusCounts || {}).forEach(function(status) { %>
              <span class="badge bg-light text-dark text-uppercase">
                <%= status %>: <%= statusCounts[status] %>
              </span>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="card shadow-sm">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h5 class="mb-0">Recent feedback</h5>
          <p class="text-muted small mb-0">Latest requests and responses across functions and restaurant bookings.</p>
        </div>
        <div class="d-flex gap-2">
          <form class="d-flex flex-wrap gap-2 align-items-end" action="/settings/feedback/activity" method="GET">
            <div>
              <label class="form-label">Type</label>
              <select class="form-select form-select-sm" name="type">
                <option value="">All</option>
                <option value="function" <%= (filters?.type === 'function') ? 'selected' : '' %>>Function</option>
                <option value="restaurant" <%= (filters?.type === 'restaurant') ? 'selected' : '' %>>Restaurant</option>
              </select>
            </div>
            <div>
              <label class="form-label">Status</label>
              <select class="form-select form-select-sm" name="status">
                <option value="">All</option>
                <option value="pending" <%= (filters?.status === 'pending') ? 'selected' : '' %>>Pending</option>
                <option value="sent" <%= (filters?.status === 'sent') ? 'selected' : '' %>>Sent</option>
                <option value="completed" <%= (filters?.status === 'completed') ? 'selected' : '' %>>Completed</option>
              </select>
            </div>
            <div>
              <label class="form-label">Rating min</label>
              <input type="number" min="1" max="5" class="form-control form-control-sm" name="min_rating" value="<%= filters?.min_rating || '' %>">
            </div>
            <div>
              <label class="form-label">Rating max</label>
              <input type="number" min="1" max="5" class="form-control form-control-sm" name="max_rating" value="<%= filters?.max_rating || '' %>">
            </div>
            <div>
              <label class="form-label">From</label>
              <input type="date" class="form-control form-control-sm" name="from" value="<%= filters?.from || '' %>">
            </div>
            <div>
              <label class="form-label">To</label>
              <input type="date" class="form-control form-control-sm" name="to" value="<%= filters?.to || '' %>">
            </div>
            <div class="d-flex gap-2">
              <button class="btn btn-primary btn-sm" type="submit">Filter</button>
              <a class="btn btn-outline-secondary btn-sm" href="/settings/feedback/activity">Clear</a>
              <a class="btn btn-outline-success btn-sm" href="/settings/feedback/export?<%= new URLSearchParams(filters || {}).toString() %>">Export CSV</a>
            </div>
          </form>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-sm align-middle mb-0">
          <thead>
            <tr>
              <th>Sent</th>
              <th>Type</th>
              <th>Event / Booking</th>
              <th>Contact</th>
              <th>Rating</th>
              <th>NPS</th>
              <th>Status</th>
              <th>Comments</th>
            </tr>
          </thead>
          <tbody>
            <% if (!responses || !responses.length) { %>
              <tr>
                <td colspan="8" class="text-muted text-center py-4">No feedback requests yet.</td>
              </tr>
            <% } else { %>
              <% responses.forEach(function(response) { %>
                <tr>
                  <td>
                    <%= response.sent_at ? new Date(response.sent_at).toLocaleDateString('en-NZ', { month: 'short', day: 'numeric' }) : '—' %>
                  </td>
                  <td class="text-capitalize"><%= response.entity_type %></td>
                  <td>
                    <div class="fw-semibold"><%= response.event_name || '-' %></div>
                    <% if (response.event_date) { %>
                      <small class="text-muted"><%= new Date(response.event_date).toLocaleDateString('en-NZ', { month: 'short', day: 'numeric' }) %></small>
                    <% } %>
                  </td>
                  <td>
                    <div><%= response.contact_name || response.contact_email || '-' %></div>
                    <% if (response.contact_avg_overall) { %>
                      <small class="text-muted">Avg: <%= response.contact_avg_overall %>/5 (<%= response.contact_count %>)</small>
                    <% } %>
                  </td>
                  <td>
                    <% if (response.rating_overall) { %>
                      <strong class="<%= response.rating_overall <=2 ? 'text-danger' : '' %>"><%= response.rating_overall %>/5</strong>
                      <% if (response.rating_service) { %><br><small class="text-muted">Service: <%= response.rating_service %>/5</small><% } %>
                    <% } else { %>
                      <span class="text-muted">-</span>
                    <% } %>
                  </td>
                  <td>
                    <% if (response.nps_score || response.nps_score === 0) { %>
                      <strong><%= response.nps_score %></strong>
                      <% if (response.contact_avg_nps) { %><br><small class="text-muted">Avg: <%= response.contact_avg_nps %></small><% } %>
                    <% } else { %>
                      <span class="text-muted">-</span>
                    <% } %>
                  </td>
                  <td><span class="badge <%= response.rating_overall && response.rating_overall <=2 ? 'bg-danger text-white' : 'bg-light text-dark' %> text-uppercase"><%= response.status %></span></td>
                  <td class="small">
                    <% if (response.comments) { %>
                      <div class="<%= response.rating_overall && response.rating_overall <=2 ? 'text-danger' : 'text-muted' %>">
                        <%= response.comments.slice(0, 140) %><%= response.comments.length > 140 ? '…' : '' %>
                      </div>
                    <% } else { %>
                      <span class="text-muted">-</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</main>
