<main class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-primary mb-0">Bulk Upload</h1>
  </div>

  <section class="card">
    <div class="card-body">
      <form id="bulkForm">
        <div class="row mb-3">
          <div class="col-md-4">
            <label class="form-label fw-semibold">Upload Type</label>
           <select id="uploadType" class="form-select">
              <option value="menu">Menus</option>
               <option value="choice">Choices</option>
              <option value="link">Menu â†” Choices Links</option>
            </select>
          </div>

          <div class="col-md-4">
            <label class="form-label fw-semibold">Assign to Category</label>
            <select id="categorySelect" class="form-select">
              <option value="">(None)</option>
              <% categories.forEach(cat => { %>
                <option value="<%= cat.id %>"><%= cat.name %></option>
              <% }) %>
            </select>
          </div>
        </div>

        <label class="form-label fw-semibold">Paste CSV Data</label>
        <textarea id="bulkInput" class="form-control mb-3" rows="8" placeholder="name, price"></textarea>

        <button type="submit" class="btn btn-primary">Upload</button>
      </form>
      <div class="mt-3" id="linkHelper" style="display: none;">
  <label class="form-label fw-semibold">Link Menus to Choices</label>
  <div class="row g-2">
    <div class="col-md-5">
      <select id="menuSelect" class="form-select">
        <option value="">Select Menu</option>
        <% menus.forEach(m => { %>
          <option value="<%= m.id %>"><%= m.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-5">
      <select id="choiceSelect" class="form-select">
        <option value="">Select Choice</option>
        <% choices.forEach(c => { %>
          <option value="<%= c.id %>"><%= c.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-2">
      <button type="button" id="addLinkBtn" class="btn btn-outline-primary w-100">Add Link</button>
    </div>
  </div>
</div>

<hr class="my-4">
<h5>ðŸ“‹ Reference: Menus</h5>
<ul class="list-group mb-4">
  <% menus.forEach(m => { %>
    <li class="list-group-item small">
      <strong><%= m.id %>.</strong> <%= m.name %>
    </li>
  <% }) %>
</ul>

<h5>ðŸ“‹ Reference: Choices</h5>
<ul class="list-group">
  <% choices.forEach(c => { %>
    <li class="list-group-item small">
      <strong><%= c.id %>.</strong> <%= c.name %>
    </li>
  <% }) %>
</ul>

      <hr class="my-4">

      <div id="bulkStatus" class="alert d-none"></div>
    </div>
  </section>
</main>
