<% const stats = locals.feedbackStats || {}; %>

<main class="settings-feedback py-4">
  <div class="d-flex justify-content-between align-items-center flex-wrap mb-4 gap-2">
    <div>
      <h1 class="mb-1">Feedback & Surveys</h1>
      <p class="text-muted mb-0">Quick access to automation, templates, and responses.</p>
    </div>
  </div>

  <% if (flashMessage) { %>
    <div class="alert alert-<%= flashType === 'error' ? 'danger' : flashType || 'success' %>">
      <%= flashMessage %>
    </div>
  <% } %>

  <div class="row g-3">
    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Automation & Questions</h5>
          <p class="text-muted small mb-3">Set timing and question layouts.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2">Pending: <%= stats.pending || 0 %> - Completed: <%= stats.completed || 0 %></div>
            <a href="/settings/feedback/automation" class="btn btn-outline-primary btn-sm">Manage automation</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Templates</h5>
          <p class="text-muted small mb-3">Email invite, survey intro, entertainment header.</p>
          <div class="mt-auto d-flex gap-2 flex-wrap">
            <a href="/settings/feedback/templates/email" class="btn btn-outline-primary btn-sm">Email invite</a>
            <a href="/settings/feedback/templates/survey" class="btn btn-outline-primary btn-sm">Survey intro</a>
            <a href="/settings/feedback/templates/entertainment" class="btn btn-outline-primary btn-sm">Entertainment header</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Responses & Activity</h5>
          <p class="text-muted small mb-3">See ratings, comments, and opt-outs.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2">Total responses: <%= stats.total || 0 %> - Opt-outs: <%= stats.optOuts || 0 %></div>
            <a href="/settings/feedback/activity" class="btn btn-outline-primary btn-sm">View activity</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Preview Surveys</h5>
          <p class="text-muted small mb-3">Check the public survey layouts.</p>
          <div class="mt-auto d-flex gap-2 flex-wrap">
            <a href="/settings/feedback/preview?type=function" target="_blank" class="btn btn-outline-secondary btn-sm">Function survey</a>
            <a href="/settings/feedback/preview?type=restaurant" target="_blank" class="btn btn-outline-secondary btn-sm">Restaurant survey</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
