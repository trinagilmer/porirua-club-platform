<% const DAY_NAMES = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"]; %>

<main class="settings-restaurant">
  <header class="mb-4">
    <h1 class="mb-1">Restaurant Services</h1>
    <p class="text-muted mb-0">Manage service windows, slot lengths, and special menus.</p>
  </header>

  <section class="card shadow-sm mb-4" id="service-settings">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h5 class="mb-0">Service Blocks</h5>
          <small class="text-muted">Each block defines a day, window, slot length, and caps.</small>
        </div>
      </div>

      <% if (!services || services.length === 0) { %>
        <div class="alert alert-light border">No services configured yet.</div>
      <% } else { %>
        <% services.forEach(function(service) { %>
          <details class="border rounded-3 p-3 mb-3">
            <summary class="fw-semibold">
              <%= service.name %> - <%= DAY_NAMES[service.day_of_week] || 'Day' %> -
              <%= service.start_time ? service.start_time.slice(0,5) : '--:--' %> -
              <%= service.end_time ? service.end_time.slice(0,5) : '--:--' %>
            </summary>
            <form class="mt-3" action="/settings/restaurant/services/edit" method="POST">
              <input type="hidden" name="id" value="<%= service.id %>">
              <div class="row g-3">
                <div class="col-md-4">
                  <label class="form-label">Name</label>
                  <input type="text" name="name" class="form-control" value="<%= service.name %>" required>
                </div>
                <div class="col-md-2">
                  <label class="form-label">Day</label>
                  <select name="day_of_week" class="form-select" required>
                    <% DAY_NAMES.forEach(function(day, idx) { %>
                      <option value="<%= idx %>" <%= idx === service.day_of_week ? 'selected' : '' %>><%= day %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="col-md-2">
                  <label class="form-label">Start</label>
                  <input type="time" name="start_time" class="form-control" value="<%= service.start_time ? service.start_time.slice(0,5) : '' %>" required>
                </div>
                <div class="col-md-2">
                  <label class="form-label">End</label>
                  <input type="time" name="end_time" class="form-control" value="<%= service.end_time ? service.end_time.slice(0,5) : '' %>" required>
                </div>
                <div class="col-md-2">
                  <label class="form-label">Active</label>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="active" <%= service.active ? 'checked' : '' %>>
                    <label class="form-check-label">Enabled</label>
                  </div>
                </div>
              </div>
              <div class="row g-3 mt-2">
                <div class="col-md-2">
                  <label class="form-label">Slot Minutes</label>
                  <input type="number" name="slot_minutes" class="form-control" value="<%= service.slot_minutes %>" min="5" step="5">
                </div>
                <div class="col-md-2">
                  <label class="form-label">Turn Minutes</label>
                  <input type="number" name="turn_minutes" class="form-control" value="<%= service.turn_minutes %>" min="5" step="5">
                </div>
                <div class="col-md-3">
                  <label class="form-label">Max Covers / Slot</label>
                  <input type="number" name="max_covers_per_slot" class="form-control" value="<%= service.max_covers_per_slot ?? '' %>" min="1">
                </div>
                <div class="col-md-3">
                  <label class="form-label">Max Online Covers</label>
                  <input type="number" name="max_online_covers" class="form-control" value="<%= service.max_online_covers ?? '' %>" min="1">
                </div>
                <div class="col-md-3">
                  <label class="form-label">Max Online Diners / Booking</label>
                  <input type="number" name="max_online_party_size" class="form-control" value="<%= service.max_online_party_size ?? '' %>" min="1">
                </div>
                <div class="col-md-4">
                  <label class="form-label">Special menu label</label>
                  <input type="text" name="special_menu_label" class="form-control" value="<%= service.special_menu_label || '' %>" placeholder="e.g. Buffet $30, Bar snacks">
                </div>
                <div class="col-md-2">
                  <label class="form-label">Menu price</label>
                  <input type="number" step="0.01" name="special_menu_price" class="form-control" value="<%= service.special_menu_price || '' %>">
                </div>
              </div>
              <div class="row g-3 mt-2">
                <div class="col-md-3">
                  <label class="form-label">Menu start date</label>
                  <input type="date" name="special_menu_start" class="form-control" value="<%= service.special_menu_start ? service.special_menu_start.toISOString().slice(0,10) : '' %>">
                </div>
                <div class="col-md-3">
                  <label class="form-label">Menu end date</label>
                  <input type="date" name="special_menu_end" class="form-control" value="<%= service.special_menu_end ? service.special_menu_end.toISOString().slice(0,10) : '' %>">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="special_menu_only" <%= service.special_menu_only ? 'checked' : '' %>>
                    <label class="form-check-label">Special menu only</label>
                  </div>
                </div>
                <div class="col-md-3 d-flex align-items-end gap-2">
                  <button type="submit" class="btn btn-primary w-100">Save</button>
                </div>
              </div>
            </form>
            <form action="/settings/restaurant/services/delete" method="POST" class="mt-2" onsubmit="return confirm('Delete <%= service.name %>?');">
              <input type="hidden" name="id" value="<%= service.id %>">
              <button type="submit" class="btn btn-outline-danger btn-sm">Delete service</button>
            </form>
          </details>
        <% }) %>
      <% } %>

      <hr>
      <h6>Add Service</h6>
      <form class="row g-3" action="/settings/restaurant/services/add" method="POST">
        <div class="col-md-4">
          <label class="form-label">Name</label>
          <input type="text" name="name" class="form-control" required>
        </div>
        <div class="col-md-2">
          <label class="form-label">Day</label>
          <select name="day_of_week" class="form-select" required>
            <% DAY_NAMES.forEach(function(day, idx) { %>
              <option value="<%= idx %>"><%= day %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-2">
          <label class="form-label">Start</label>
          <input type="time" name="start_time" class="form-control" required>
        </div>
        <div class="col-md-2">
          <label class="form-label">End</label>
          <input type="time" name="end_time" class="form-control" required>
        </div>
        <div class="col-md-1">
          <label class="form-label">Slot</label>
          <input type="number" name="slot_minutes" class="form-control" value="30" min="5" step="5">
        </div>
        <div class="col-md-1">
          <label class="form-label">Turn</label>
          <input type="number" name="turn_minutes" class="form-control" value="90" min="5" step="5">
        </div>
        <div class="col-md-3">
          <label class="form-label">Max Covers / Slot</label>
          <input type="number" name="max_covers_per_slot" class="form-control" min="1">
        </div>
        <div class="col-md-3">
          <label class="form-label">Max Online</label>
          <input type="number" name="max_online_covers" class="form-control" min="1">
        </div>
        <div class="col-md-3">
          <label class="form-label">Max Online Diners / Booking</label>
          <input type="number" name="max_online_party_size" class="form-control" min="1">
        </div>
        <div class="col-md-4">
          <label class="form-label">Special menu label</label>
          <input type="text" name="special_menu_label" class="form-control" placeholder="e.g. Buffet $30, Bar snacks">
        </div>
        <div class="col-md-2">
          <label class="form-label">Menu price</label>
          <input type="number" step="0.01" name="special_menu_price" class="form-control">
        </div>
        <div class="col-md-3">
          <label class="form-label">Menu start date</label>
          <input type="date" name="special_menu_start" class="form-control">
        </div>
        <div class="col-md-3">
          <label class="form-label">Menu end date</label>
          <input type="date" name="special_menu_end" class="form-control">
        </div>
        <div class="col-md-2 d-flex align-items-end">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="special_menu_only">
            <label class="form-check-label">Special menu only</label>
          </div>
        </div>
        <div class="col-md-2 d-flex align-items-end">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="active" checked>
            <label class="form-check-label">Active</label>
          </div>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Add Service</button>
        </div>
      </form>
    </div>
  </section>
</main>
