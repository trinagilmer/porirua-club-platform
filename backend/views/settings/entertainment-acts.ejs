<main class="settings-entertainment">
  <header class="mb-4">
    <h1 class="mb-1">Acts Directory</h1>
    <p class="text-muted mb-0">Manage performers for quick selection and reporting.</p>
  </header>

  <section class="card shadow-sm mt-4">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h5 class="mb-0">Acts Directory</h5>
          <small class="text-muted">Add performers and optional links.</small>
        </div>
        <form class="d-flex gap-2" action="/settings/entertainment/acts/add" method="POST">
          <input type="text" name="name" class="form-control form-control-sm" placeholder="New act name" required>
          <input type="url" name="external_url" class="form-control form-control-sm" placeholder="Website (optional)">
          <button type="submit" class="btn btn-sm btn-outline-primary">Add</button>
        </form>
      </div>
      <% if (!acts || !acts.length) { %>
        <p class="text-muted mb-0">No acts recorded yet.</p>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-sm align-middle">
            <thead>
              <tr>
                <th>Name</th>
                <th>Link</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% acts.forEach(function(act) { %>
                <tr>
                  <td><%= act.name %></td>
                  <td>
                    <% if (act.external_url) { %>
                      <a href="<%= act.external_url %>" target="_blank" rel="noopener"><%= act.external_url %></a>
                    <% } else { %>
                      <span class="text-muted">-</span>
                    <% } %>
                  </td>
                  <td class="text-end">
                    <form action="/settings/entertainment/acts/delete" method="POST" onsubmit="return confirm('Delete <%= act.name %>?');">
                      <input type="hidden" name="id" value="<%= act.id %>">
                      <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </section>
</main>
