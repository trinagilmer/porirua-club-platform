<% const entertainmentPrefill = typeof prefillEntertainment !== 'undefined' ? prefillEntertainment : null; %>
<% const rangeSelection = typeof rangeFilter !== 'undefined' ? rangeFilter : 'upcoming'; %>
<% const searchValue = typeof searchQuery !== 'undefined' ? searchQuery : ''; %>
<% const adjunctValue = typeof adjunctFilter !== 'undefined' ? adjunctFilter : ''; %>
<% const adjunctChoices = Array.isArray(adjunctOptions) ? adjunctOptions : []; %>
<% const returnToValue = typeof returnTo !== 'undefined' && returnTo ? returnTo : '/settings/entertainment/events'; %>
<% const entertainmentEvents = (events || []).filter(function(event) { return event.display_type !== 'regularevents'; }); %>
<% const regularEvents = (events || []).filter(function(event) { return event.display_type === 'regularevents'; }); %>

<main class="settings-entertainment">
  <div class="d-flex justify-content-between align-items-center mb-4 gap-2 flex-wrap">
    <div>
      <h1 class="mb-0">Entertainment Events</h1>
      <p class="text-muted mb-0">Manage shows, performances, and public listings.</p>
    </div>
    <div class="d-flex gap-2 flex-wrap">
      <a class="btn btn-outline-secondary" href="/settings/entertainment/public">
        Public page settings
      </a>
      <a class="btn btn-outline-secondary" href="/settings/entertainment/acts">
        Acts directory
      </a>
      <form method="GET" action="/settings/entertainment/events" class="d-flex flex-wrap align-items-center gap-2">
        <label class="small text-muted" for="entRange">Show</label>
        <select id="entRange" name="range" class="form-select form-select-sm">
          <option value="upcoming" <%= rangeSelection === 'upcoming' ? 'selected' : '' %>>Upcoming</option>
          <option value="past" <%= rangeSelection === 'past' ? 'selected' : '' %>>Past</option>
          <option value="all" <%= rangeSelection === 'all' ? 'selected' : '' %>>All</option>
        </select>
        <input
          type="text"
          name="q"
          class="form-control form-control-sm"
          placeholder="Search title, adjunct, acts"
          value="<%= searchValue %>"
        >
        <select name="adjunct" class="form-select form-select-sm">
          <option value="">All adjuncts</option>
          <% adjunctChoices.forEach(function(adjunct) { %>
            <option value="<%= adjunct %>" <%= adjunct === adjunctValue ? 'selected' : '' %>><%= adjunct %></option>
          <% }) %>
        </select>
        <button type="submit" class="btn btn-outline-secondary btn-sm">Apply</button>
        <a class="btn btn-outline-secondary btn-sm" href="/settings/entertainment/events">Clear</a>
      </form>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addEntertainmentModal">
        + Add Event
      </button>
    </div>
  </div>

  <% if (typeof flashMessage !== 'undefined' && flashMessage) { %>
    <div class="alert alert-<%= flashType === 'error' ? 'danger' : flashType === 'warning' ? 'warning' : 'success' %> alert-dismissible fade show">
      <%= flashMessage %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2">
        <h5 class="mb-0">Entertainment events</h5>
        <div class="d-flex align-items-center gap-2">
          <input type="url" class="form-control form-control-sm" id="bulkImageUrlEntertainment" placeholder="Paste image URL for selected">
          <button type="button" class="btn btn-outline-secondary btn-sm" data-bulk-apply="entertainment">Apply image</button>
        </div>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th style="width: 48px;">
              <input type="checkbox" class="form-check-input" data-bulk-select="entertainment">
            </th>
            <th>Title</th>
            <th>Color</th>
            <th>Date</th>
            <th>Status</th>
            <th>Organiser</th>
            <th>Created</th>
            <th>Updated</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if (!entertainmentEvents.length) { %>
            <tr>
              <td colspan="8" class="text-muted text-center py-4">No entertainment events configured yet.</td>
            </tr>
          <% } else { %>
            <% entertainmentEvents.forEach(function(event) { %>
              <tr>
                <td>
                  <input
                    type="checkbox"
                    class="form-check-input"
                    data-bulk-item="entertainment"
                    value="<%= event.id %>"
                    data-series-id="<%= event.series_id || '' %>"
                  >
                </td>
                <td>
                  <div class="fw-semibold"><%= event.title %></div>
                  <% if (event.room_name) { %>
                    <small class="text-muted d-block">Room: <%= event.room_name %></small>
                  <% } %>
                <% if (event.adjunct_name) { %>
                  <small class="text-muted d-block">Adjunct: <%= event.adjunct_name %></small>
                <% } %>
                <% if (event.function_id) { %>
                  <small class="text-muted d-block">
                    Function:
                    <a href="/functions/<%= event.function_id %>" class="text-decoration-none">
                      <%= event.function_name || event.function_id %><% if (event.function_date) { %> · <%= new Date(event.function_date).toLocaleDateString('en-NZ') %><% } %>
                    </a>
                  </small>
                <% } %>
                <% if (event.acts && event.acts.length) { %>
                  <small class="text-muted d-block">
                    Acts:
                      <%= event.acts.map(function(act) { return act.name; }).join(", ") %>
                    </small>
                  <% } %>
                </td>
                <td>
                  <div class="d-flex align-items-center gap-2">
                    <span class="rounded-circle border" style="width:14px;height:14px;background:<%= event.effective_event_color || event.event_color || '#6bb4de' %>;"></span>
                    <span class="small text-muted"><%= event.effective_event_color || event.event_color || '#6bb4de' %></span>
                  </div>
                </td>
                <td><%= event.start_at ? new Date(event.start_at).toLocaleString('en-NZ', { timeZone: 'Pacific/Auckland', dateStyle: 'medium', timeStyle: 'short' }) : '-' %></td>
                <td class="text-capitalize"><%= event.status %></td>
                <td><%= event.organiser || '-' %></td>
                <td>
                  <div class="small text-muted"><%= event.created_by_name || '-' %></div>
                  <small class="text-muted"><%= event.created_at ? new Date(event.created_at).toLocaleDateString('en-NZ') : '' %></small>
                </td>
                <td>
                  <div class="small text-muted"><%= event.updated_by_name || '-' %></div>
                  <small class="text-muted"><%= event.updated_at ? new Date(event.updated_at).toLocaleDateString('en-NZ') : '' %></small>
                </td>
                <td class="text-end">
                  <button
                    class="btn btn-sm btn-outline-secondary"
                    data-bs-toggle="modal"
                    data-bs-target="#editEntertainmentModal"
                    data-event-id="<%= event.id %>"
                  >
                    Edit
                  </button>
                  <button
                    class="btn btn-sm btn-outline-primary copy-event-btn"
                    type="button"
                    data-copy-event="<%- encodeURIComponent(JSON.stringify(event)) %>"
                  >
                    Copy
                  </button>
                  <% if (event.series_id) { %>
                    <button
                      class="btn btn-sm btn-outline-secondary bulk-series-btn"
                      type="button"
                      data-series-id="<%= event.series_id %>"
                      data-series-scope="all"
                    >
                      Apply image to series
                    </button>
                  <% } %>
                  <form action="/settings/entertainment/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete <%= event.title %>?');">
                    <input type="hidden" name="id" value="<%= event.id %>">
                    <input type="hidden" name="return_to" value="<%= returnToValue %>">
                    <% if (event.series_id) { %>
                      <select name="series_scope" class="form-select form-select-sm d-inline-block w-auto me-2">
                        <option value="single">This event only</option>
                        <option value="future">This + future</option>
                        <option value="all">All in series</option>
                      </select>
                    <% } else { %>
                      <input type="hidden" name="series_scope" value="single">
                    <% } %>
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-header bg-light">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2">
        <h5 class="mb-0">Regular events</h5>
        <div class="d-flex align-items-center gap-2">
          <input type="url" class="form-control form-control-sm" id="bulkImageUrlRegular" placeholder="Paste image URL for selected">
          <button type="button" class="btn btn-outline-secondary btn-sm" data-bulk-apply="regular">Apply image</button>
        </div>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th style="width: 48px;">
              <input type="checkbox" class="form-check-input" data-bulk-select="regular">
            </th>
            <th>Title</th>
            <th>Color</th>
            <th>Date</th>
            <th>Status</th>
            <th>Organiser</th>
            <th>Created</th>
            <th>Updated</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if (!regularEvents.length) { %>
            <tr>
              <td colspan="8" class="text-muted text-center py-4">No regular events configured yet.</td>
            </tr>
          <% } else { %>
            <% regularEvents.forEach(function(event) { %>
              <tr>
                <td>
                  <input
                    type="checkbox"
                    class="form-check-input"
                    data-bulk-item="regular"
                    value="<%= event.id %>"
                    data-series-id="<%= event.series_id || '' %>"
                  >
                </td>
                <td>
                  <div class="fw-semibold"><%= event.title %></div>
                  <% if (event.room_name) { %>
                    <small class="text-muted d-block">Room: <%= event.room_name %></small>
                  <% } %>
                <% if (event.adjunct_name) { %>
                  <small class="text-muted d-block">Adjunct: <%= event.adjunct_name %></small>
                <% } %>
                <% if (event.function_id) { %>
                  <small class="text-muted d-block">
                    Function:
                    <a href="/functions/<%= event.function_id %>" class="text-decoration-none">
                      <%= event.function_name || event.function_id %><% if (event.function_date) { %> · <%= new Date(event.function_date).toLocaleDateString('en-NZ') %><% } %>
                    </a>
                  </small>
                <% } %>
                <% if (event.acts && event.acts.length) { %>
                  <small class="text-muted d-block">
                    Acts:
                      <%= event.acts.map(function(act) { return act.name; }).join(", ") %>
                    </small>
                  <% } %>
                </td>
                <td>
                  <div class="d-flex align-items-center gap-2">
                    <span class="rounded-circle border" style="width:14px;height:14px;background:<%= event.effective_event_color || event.event_color || '#6bb4de' %>;"></span>
                    <span class="small text-muted"><%= event.effective_event_color || event.event_color || '#6bb4de' %></span>
                  </div>
                </td>
                <td><%= event.start_at ? new Date(event.start_at).toLocaleString('en-NZ', { timeZone: 'Pacific/Auckland', dateStyle: 'medium', timeStyle: 'short' }) : '-' %></td>
                <td class="text-capitalize"><%= event.status %></td>
                <td><%= event.organiser || '-' %></td>
                <td>
                  <div class="small text-muted"><%= event.created_by_name || '-' %></div>
                  <small class="text-muted"><%= event.created_at ? new Date(event.created_at).toLocaleDateString('en-NZ') : '' %></small>
                </td>
                <td>
                  <div class="small text-muted"><%= event.updated_by_name || '-' %></div>
                  <small class="text-muted"><%= event.updated_at ? new Date(event.updated_at).toLocaleDateString('en-NZ') : '' %></small>
                </td>
                <td class="text-end">
                  <button
                    class="btn btn-sm btn-outline-secondary"
                    data-bs-toggle="modal"
                    data-bs-target="#editEntertainmentModal"
                    data-event-id="<%= event.id %>"
                  >
                    Edit
                  </button>
                  <button
                    class="btn btn-sm btn-outline-primary copy-event-btn"
                    type="button"
                    data-copy-event="<%- encodeURIComponent(JSON.stringify(event)) %>"
                  >
                    Copy
                  </button>
                  <% if (event.series_id) { %>
                    <button
                      class="btn btn-sm btn-outline-secondary bulk-series-btn"
                      type="button"
                      data-series-id="<%= event.series_id %>"
                      data-series-scope="all"
                    >
                      Apply image to series
                    </button>
                  <% } %>
                  <form action="/settings/entertainment/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete <%= event.title %>?');">
                    <input type="hidden" name="id" value="<%= event.id %>">
                    <input type="hidden" name="return_to" value="<%= returnToValue %>">
                    <% if (event.series_id) { %>
                      <select name="series_scope" class="form-select form-select-sm d-inline-block w-auto me-2">
                        <option value="single">This event only</option>
                        <option value="future">This + future</option>
                        <option value="all">All in series</option>
                      </select>
                    <% } else { %>
                      <input type="hidden" name="series_scope" value="single">
                    <% } %>
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</main>

<!-- Add Modal -->
<div class="modal fade" id="addEntertainmentModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <form class="modal-content" action="/settings/entertainment/add" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="return_to" value="<%= returnToValue %>">
      <div class="modal-header">
        <h5 class="modal-title">Add Entertainment Event</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="alert alert-info d-none" id="entCopyNotice" role="alert">
          Event copied into the form. Review the details and save.
        </div>
        <div class="row g-3">
          <div class="col-md-8">
            <label class="form-label">Title</label>
            <input type="text" name="title" class="form-control" value="<%= entertainmentPrefill?.title || '' %>" required>
          </div>
          <div class="col-md-4">
            <label class="form-label">Status</label>
            <select name="status" class="form-select">
              <option value="draft">Draft</option>
              <option value="scheduled">Scheduled</option>
              <option value="published">Published</option>
              <option value="cancelled">Cancelled</option>
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Room / Space</label>
            <select name="room_id" class="form-select">
              <option value="">Unassigned</option>
              <% (rooms || []).forEach(function(room) { %>
                <option value="<%= room.id %>"><%= room.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Linked function</label>
            <select name="function_id" class="form-select">
              <option value="">No linked function</option>
              <% (functionOptions || []).forEach(function(fn) { %>
                <option value="<%= fn.id_uuid %>">
                  <%= fn.event_name || 'Function' %><% if (fn.event_date) { %> · <%= new Date(fn.event_date).toLocaleDateString('en-NZ') %><% } %>
                </option>
              <% }) %>
            </select>
            <small class="text-muted">Optional: link to a catering function.</small>
          </div>
          <div class="col-md-4">
            <label class="form-label">Display as</label>
            <select name="display_type" class="form-select">
              <option value="entertainment" selected>Entertainment (default)</option>
              <option value="regularevents">Regular events</option>
            </select>
            <small class="text-muted">Controls which tab the event appears under.</small>
          </div>
          <div class="col-md-4">
            <label class="form-label">Event color</label>
            <input type="color" name="event_color" class="form-control form-control-color" value="#6bb4de">
            <small class="text-muted">Used in week and agenda views.</small>
          </div>
          <div class="col-md-6">
            <label class="form-label">Date</label>
            <input type="date" name="start_date" class="form-control" value="<%= entertainmentPrefill?.start_date || '' %>" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Time</label>
            <input type="time" name="start_time" class="form-control" value="<%= entertainmentPrefill?.start_time || '' %>" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">End Date (optional)</label>
            <input type="date" name="end_date" class="form-control">
          </div>
          <div class="col-md-6">
            <label class="form-label">End Time (optional)</label>
            <input type="time" name="end_time" class="form-control">
          </div>
          <div class="col-md-6">
            <label class="form-label">Adjunct / Support Act</label>
            <input type="text" name="adjunct_name" class="form-control">
          </div>
          <div class="col-md-6">
            <label class="form-label">External link</label>
            <input type="url" name="external_url" class="form-control">
          </div>
          <div class="col-md-6">
            <label class="form-label">Organiser</label>
            <input type="text" name="organiser" class="form-control">
          </div>
          <div class="col-md-6">
            <label class="form-label">Price (NZD)</label>
            <input type="number" name="price" class="form-control" min="0" step="0.50">
          </div>
          <div class="col-md-6">
            <label class="form-label">Image</label>
            <div class="d-flex gap-2">
              <input type="url" name="image_url" class="form-control" id="entAddImageUrl" placeholder="Paste image URL" value="<%= (mediaSelection && mediaSelection.target === 'add') ? mediaSelection.imageUrl : '' %>">
              <a class="btn btn-outline-secondary" href="/settings/entertainment/media?target=add">Insert</a>
            </div>
            <small class="text-muted">Paste a URL or choose from the media library.</small>
          </div>
          <div class="col-md-6">
            <label class="form-label">Or Upload Image</label>
            <input type="file" name="image_file" accept="image/*" class="form-control">
            <small class="text-muted">Max 5MB. Will be cropped to fit.</small>
          </div>
          <div class="col-12">
            <label class="form-label">Acts</label>
            <select name="acts[]" class="form-select" multiple>
              <% (acts || []).forEach(function(act) { %>
                <option value="<%= act.id %>"><%= act.name %></option>
              <% }) %>
            </select>
            <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple acts.</small>
          </div>
          <div class="col-12">
            <label class="form-label">Description</label>
            <textarea name="description" rows="4" class="form-control"></textarea>
          </div>
          <div class="col-12">
            <div class="border rounded-3 p-3 bg-light-subtle">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <div class="fw-semibold small mb-1">Quick add act</div>
                  <div class="text-muted small">Create a new act without leaving this form.</div>
                </div>
                <button type="button" class="btn btn-sm btn-outline-secondary" id="toggleQuickAct">
                  Add act
                </button>
              </div>
              <div class="mt-3 d-none" id="quickActForm">
                <div class="row g-2">
                  <div class="col-md-6">
                    <label class="form-label form-label-sm">Act name</label>
                    <input type="text" class="form-control form-control-sm" id="quickActName" placeholder="e.g. The Originals">
                  </div>
                  <div class="col-md-6">
                    <label class="form-label form-label-sm">External URL (optional)</label>
                    <input type="url" class="form-control form-control-sm" id="quickActUrl" placeholder="https://...">
                  </div>
                  <div class="col-12 d-flex align-items-center gap-2">
                    <button type="button" class="btn btn-sm btn-primary" id="quickActSubmit">Save act</button>
                    <span class="small text-muted" id="quickActStatus"></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-12">
            <div class="border rounded-3 p-3 bg-light-subtle">
              <h6 class="mb-2">Repeat event</h6>
              <div class="row g-3">
                <div class="col-md-4">
                  <label class="form-label">Frequency</label>
                  <select name="recurrence_frequency" class="form-select">
                    <option value="none">Does not repeat</option>
                    <option value="daily">Daily</option>
                    <option value="weekly">Weekly</option>
                    <option value="monthly_date">Monthly (date)</option>
                    <option value="monthly_weekday">Monthly (weekday)</option>
                  </select>
                </div>
                <div class="col-md-4">
                  <label class="form-label">Interval</label>
                  <input type="number" name="recurrence_interval" class="form-control" min="1" value="1">
                </div>
                <div class="col-md-4">
                  <label class="form-label">End date</label>
                  <input type="date" name="recurrence_end_date" class="form-control">
                </div>
              </div>
              <div class="mt-2">
                <label class="form-label">Weekdays</label>
                <div class="d-flex flex-wrap gap-2">
                  <% ["Sun","Mon","Tue","Wed","Thu","Fri","Sat"].forEach(function(day, idx) { %>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" name="recurrence_weekdays[]" value="<%= idx %>" id="ent-rec-<%= idx %>">
                      <label class="form-check-label" for="ent-rec-<%= idx %>"><%= day %></label>
                    </div>
                  <% }) %>
                </div>
              </div>
              <div class="row g-3 mt-2">
                <div class="col-md-6">
                  <label class="form-label">Monthly day</label>
                  <input type="number" name="recurrence_monthly_day" class="form-control" min="1" max="31">
                </div>
                <div class="col-md-6">
                  <label class="form-label">Monthly weekday</label>
                  <select name="recurrence_monthly_week" class="form-select">
                    <option value="">--</option>
                    <option value="1">First</option>
                    <option value="2">Second</option>
                    <option value="3">Third</option>
                    <option value="4">Fourth</option>
                    <option value="-1">Last</option>
                  </select>
                </div>
              </div>
              <div class="mt-2">
                <label class="form-label">Skip dates</label>
                <textarea name="recurrence_skip_dates" rows="2" class="form-control" placeholder="YYYY-MM-DD separated by commas"></textarea>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save event</button>
      </div>
    </form>
  </div>
</div>

<!-- Edit Modal -->
