  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <form class="modal-content" action="/settings/entertainment/edit" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="return_to" value="<%= returnToValue %>">
      <div class="modal-header">
        <h5 class="modal-title">Edit Entertainment Event</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" name="id" id="entEditId">
        <div class="row g-3">
