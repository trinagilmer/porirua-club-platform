<main class="settings-functions">
  <% const embedBase = (baseUrl || '').replace(/\/$/, ''); %>
  <header class="mb-4">
    <h1 class="mb-1">Function Enquiry Settings</h1>
    <p class="text-muted mb-0">Manage public enquiry embeds and notification details.</p>
  </header>

  <section class="card shadow-sm mb-4">
    <div class="card-body">
      <h5 class="mb-2">Embed link</h5>
      <p class="text-muted small mb-3">Use this URL inside an iframe on your website.</p>
      <div class="row g-3">
        <div class="col-md-8">
          <label class="form-label">Function enquiry (embed)</label>
          <input type="text" class="form-control form-control-sm" readonly value="<%= embedBase %>/functions/enquiry?embed=1">
        </div>
      </div>
    </div>
  </section>

  <section class="card shadow-sm">
    <div class="card-body">
      <h5 class="mb-3">Notifications &amp; terms</h5>
      <form method="POST" action="/settings/functions/enquiry" class="vstack gap-3">
        <div>
          <label class="form-label">Notification emails</label>
          <input
            type="text"
            name="enquiry_notification_emails"
            class="form-control"
            value="<%= settings?.enquiry_notification_emails || '' %>"
          />
          <small class="text-muted">Comma separated list (e.g. operations@poriruaclub.co.nz).</small>
        </div>
        <div>
          <label class="form-label">Terms URL</label>
          <input
            type="text"
            name="enquiry_terms_url"
            class="form-control"
            value="<%= settings?.enquiry_terms_url || '' %>"
          />
          <small class="text-muted">Used for the standard terms link on the enquiry form.</small>
        </div>
        <div>
          <label class="form-label">Show these rooms on the enquiry form</label>
          <div class="border rounded-3 p-3 bg-light">
            <% const selectedRoomIds = new Set((settings?.enquiry_room_ids || []).map(id => String(id))); %>
            <% if ((rooms || []).length === 0) { %>
              <p class="text-muted mb-0">No rooms configured yet.</p>
            <% } else { %>
              <div class="row row-cols-1 row-cols-md-2 g-2">
                <% rooms.forEach(function(room) { %>
                  <div class="col">
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        name="enquiry_room_ids"
                        id="room-<%= room.id %>"
                        value="<%= room.id %>"
                        <%= selectedRoomIds.has(String(room.id)) ? 'checked' : '' %>
                      >
                      <label class="form-check-label" for="room-<%= room.id %>">
                        <%= room.name %><% if (room.capacity) { %> (<%= room.capacity %> ppl)<% } %>
                      </label>
                    </div>
                  </div>
                <% }) %>
              </div>
              <small class="text-muted d-block mt-2">Leave unchecked to show all rooms.</small>
            <% } %>
          </div>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            id="allowCustomEventType"
            name="enquiry_allow_custom_event_type"
            value="true"
            <%= settings?.enquiry_allow_custom_event_type ? 'checked' : '' %>
          >
          <label class="form-check-label" for="allowCustomEventType">
            Allow custom event type entry when the list does not match.
          </label>
        </div>
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-primary">Save settings</button>
        </div>
      </form>
    </div>
  </section>
</main>
