<section class="card shadow-sm mt-4">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h5 class="mb-0">Acts Directory</h5>
        <small class="text-muted">Manage performers for quick selection and reporting.</small>
      </div>
      <form class="d-flex gap-2" action="/settings/entertainment/acts/add" method="POST">
        <input type="text" name="name" class="form-control form-control-sm" placeholder="New act name" required>
        <input type="url" name="external_url" class="form-control form-control-sm" placeholder="Website (optional)">
        <button type="submit" class="btn btn-sm btn-outline-primary">Add</button>
      </form>
    </div>
    <% if (!acts || !acts.length) { %>
      <p class="text-muted mb-0">No acts recorded yet.</p>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-sm align-middle">
          <thead>
            <tr>
              <th>Name</th>
              <th>Link</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% acts.forEach(function(act) { %>
              <tr>
                <td><%= act.name %></td>
                <td>
                  <% if (act.external_url) { %>
                    <a href="<%= act.external_url %>" target="_blank" rel="noopener"><%= act.external_url %></a>
                  <% } else { %>
                    <span class="text-muted">—</span>
                  <% } %>
                </td>
                <td class="text-end">
                  <form action="/settings/entertainment/acts/delete" method="POST" onsubmit="return confirm('Delete <%= act.name %>?');">
                    <input type="hidden" name="id" value="<%= act.id %>">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const editModal = document.getElementById("editEntertainmentModal");
    editModal?.addEventListener("show.bs.modal", (event) => {
      const button = event.relatedTarget;
      if (!button) return;
      const eventData = button.getAttribute("data-event");
      if (!eventData) return;
      try {
        const record = JSON.parse(eventData);
        document.getElementById("entEditId").value = record.id || "";
        document.getElementById("entEditTitle").value = record.title || "";
        document.getElementById("entEditStatus").value = record.status || "draft";
        document.getElementById("entEditRoom").value = record.room_id || "";
        document.getElementById("entEditDisplayType").value =
          record.display_type === "regularevents" ? "regularevents" : "entertainment";
        document.getElementById("entEditAdjunct").value = record.adjunct_name || "";
        document.getElementById("entEditLink").value = record.external_url || "";
        document.getElementById("entEditOrganiser").value = record.organiser || "";
        document.getElementById("entEditPrice").value = record.price || "";
        document.getElementById("entEditImage").value = record.image_url || "";
        document.getElementById("entEditDescription").value = record.description || "";
        if (record.start_at) {
          const dateObj = new Date(record.start_at);
          document.getElementById("entEditDate").value = dateObj.toISOString().slice(0, 10);
          document.getElementById("entEditTime").value = dateObj.toISOString().slice(11, 16);
        } else {
          document.getElementById("entEditDate").value = "";
          document.getElementById("entEditTime").value = "";
        }
        if (record.end_at) {
          const endObj = new Date(record.end_at);
          document.getElementById("entEditEndDate").value = endObj.toISOString().slice(0, 10);
          document.getElementById("entEditEndTime").value = endObj.toISOString().slice(11, 16);
        } else {
          document.getElementById("entEditEndDate").value = "";
          document.getElementById("entEditEndTime").value = "";
        }
        const select = document.getElementById("entEditActs");
        if (select) {
          const selectedIds = (record.acts || []).map((act) => act.id);
          Array.from(select.options).forEach((option) => {
            option.selected = selectedIds.includes(Number(option.value));
          });
        }
      } catch (err) {
        console.error("Failed to load event data", err);
      }
    });
  });
</script>

<% if (entertainmentPrefill && (entertainmentPrefill.title || entertainmentPrefill.start_date || entertainmentPrefill.start_time)) { %>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var addModal = document.getElementById('addEntertainmentModal');
    if (!addModal || !window.bootstrap) return;
    var modal = new window.bootstrap.Modal(addModal);
    modal.show();
  });
</script>
<% } %>
