<% const counts = locals.entertainmentCounts || {}; %>

<main class="settings-entertainment">
  <header class="mb-4">
    <h1 class="mb-1">Entertainment Settings</h1>
    <p class="text-muted mb-0">Quick links to manage events, acts, public page settings, media, and embeds.</p>
  </header>

  <div class="row g-3">
    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Events</h5>
          <p class="text-muted small mb-3">Shows, performances, and public listings.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2"><%= counts.events || 0 %> event(s)</div>
            <a href="/settings/entertainment/events" class="btn btn-outline-primary btn-sm">Manage events</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Acts Directory</h5>
          <p class="text-muted small mb-3">Performers for quick selection and reporting.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2"><%= counts.acts || 0 %> act(s)</div>
            <a href="/settings/entertainment/acts" class="btn btn-outline-primary btn-sm">Manage acts</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Public Page</h5>
          <p class="text-muted small mb-3">Header banner toggle and public header template.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2">Website settings</div>
            <a href="/settings/entertainment/public" class="btn btn-outline-primary btn-sm">Manage public page</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Media Library</h5>
          <p class="text-muted small mb-3">Images used across entertainment listings.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2">Reusable assets</div>
            <a href="/settings/entertainment/media" class="btn btn-outline-primary btn-sm">Open library</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Embeds</h5>
          <p class="text-muted small mb-3">Public page and calendar embed links.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2">Website links</div>
            <a href="/settings/entertainment/embeds" class="btn btn-outline-primary btn-sm">View embeds</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
