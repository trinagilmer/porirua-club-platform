              <label class="form-check-label" for="entScopeSingle">Only this event</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="series_scope" id="entScopeFuture" value="future">
              <label class="form-check-label" for="entScopeFuture">This and all future events in the series</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="series_scope" id="entScopeAll" value="all">
              <label class="form-check-label" for="entScopeAll">All events in the series</label>
            </div>
            <small class="text-muted">Shown for repeating events.</small>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
    </form>
  </div>
</div>



<div id="entMediaSelection" class="d-none" data-target="<%= mediaSelection?.target || '' %>" data-event-id="<%= mediaSelection?.eventId || '' %>" data-image-url="<%= mediaSelection?.imageUrl || '' %>"></div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const addActsSelect = document.querySelector('select[name="acts[]"]');
    const editActsSelect = document.getElementById("entEditActs");
    const nzDate = (value) => {
      if (!value) return "";
      try {
        return new Date(value).toLocaleDateString("en-CA", { timeZone: "Pacific/Auckland" });
      } catch {
        return "";
      }
    };
    const nzTime = (value) => {
      if (!value) return "";
      try {
        return new Date(value).toLocaleTimeString("en-NZ", {
          timeZone: "Pacific/Auckland",
          hour12: false,
          hour: "2-digit",
          minute: "2-digit",
        });
      } catch {
        return "";
      }
    };
    const quickToggle = document.getElementById("toggleQuickAct");
    const quickForm = document.getElementById("quickActForm");
    const quickName = document.getElementById("quickActName");
    const quickUrl = document.getElementById("quickActUrl");
    const quickSubmit = document.getElementById("quickActSubmit");
    const quickStatus = document.getElementById("quickActStatus");
    const seriesScopeWrap = document.getElementById("entEditSeriesScopeWrap");
    const seriesScopeSingle = document.getElementById("entScopeSingle");
    const seriesScopeFuture = document.getElementById("entScopeFuture");
    const seriesScopeAll = document.getElementById("entScopeAll");
    const recFreq = document.getElementById("entRecFreq");
    const recInterval = document.getElementById("entRecInterval");
    const recEndDate = document.getElementById("entRecEndDate");
    const recMonthlyDay = document.getElementById("entRecMonthlyDay");
    const recMonthlyWeek = document.getElementById("entRecMonthlyWeek");
    const recSkipDates = document.getElementById("entRecSkipDates");

    const setScopeVisibility = (visible) => {
      if (!seriesScopeWrap) return;
      seriesScopeWrap.classList.toggle("d-none", !visible);
      const target = seriesScopeSingle || seriesScopeFuture || seriesScopeAll;
      if (target) target.checked = true;
    };

    const upsertActOption = (select, act, selectIt = false) => {
      if (!select || !act) return;
      const existing = Array.from(select.options).find((opt) => Number(opt.value) === Number(act.id));
      if (existing) {
        existing.textContent = act.name;
        if (selectIt) existing.selected = true;
        return;
      }
      const opt = document.createElement("option");
      opt.value = act.id;
      opt.textContent = act.name;
      if (selectIt) opt.selected = true;
      select.appendChild(opt);
    };

    const showQuickStatus = (message, isError = false) => {
      if (!quickStatus) return;
      quickStatus.textContent = message || "";
      quickStatus.classList.toggle("text-danger", Boolean(isError));
    };

    quickToggle?.addEventListener("click", () => {
      if (!quickForm) return;
      quickForm.classList.toggle("d-none");
      if (!quickForm.classList.contains("d-none")) {
        quickName?.focus();
      }
    });

    quickSubmit?.addEventListener("click", async () => {
      const name = (quickName?.value || "").trim();
      const external_url = (quickUrl?.value || "").trim();
      if (!name) {
        showQuickStatus("Act name is required", true);
        quickName?.focus();
        return;
      }
      showQuickStatus("Saving...");
      try {
        const resp = await fetch("/settings/entertainment/acts/add", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            Accept: "application/json",
          },
          body: JSON.stringify({ name, external_url: external_url || null }),
        });
        const data = await resp.json().catch(() => null);
        if (!resp.ok || !data?.success || !data.act) {
          throw new Error(data?.message || "Failed to save act");
        }
        upsertActOption(addActsSelect, data.act, true);
        upsertActOption(editActsSelect, data.act, false);
        if (quickName) quickName.value = "";
        if (quickUrl) quickUrl.value = "";
        showQuickStatus("Added and selected.");
      } catch (err) {
        console.error("Quick add act failed", err);
        showQuickStatus(err.message || "Failed to save act", true);
      }
    });

    const editModal = document.getElementById("editEntertainmentModal");
    editModal?.addEventListener("show.bs.modal", (event) => {
      const button = event.relatedTarget;
      if (!button) return;
      const eventData = button.getAttribute("data-event");
      const eventId = button.getAttribute("data-event-id");
      const applyRecord = (record) => {
        // Reset recurrence inputs
        if (recFreq) recFreq.value = "none";
        if (recInterval) recInterval.value = "1";
        if (recEndDate) recEndDate.value = "";
        if (recMonthlyDay) recMonthlyDay.value = "";
        if (recMonthlyWeek) recMonthlyWeek.value = "";
        if (recSkipDates) recSkipDates.value = "";
        document.querySelectorAll('input[name="recurrence_weekdays[]"]').forEach((cb) => {
          cb.checked = false;
        });
        document.getElementById("entEditId").value = record.id || "";
        document.getElementById("entEditTitle").value = record.title || "";
        document.getElementById("entEditStatus").value = record.status || "draft";
        document.getElementById("entEditRoom").value = record.room_id || "";
        document.getElementById("entEditDisplayType").value =
          record.display_type === "regularevents" ? "regularevents" : "entertainment";
        document.getElementById("entEditAdjunct").value = record.adjunct_name || "";
        document.getElementById("entEditLink").value = record.external_url || "";
        document.getElementById("entEditOrganiser").value = record.organiser || "";
        document.getElementById("entEditPrice").value = record.price || "";
        const imageUrlInput = document.getElementById("entEditImage");
        const imageLabel = document.getElementById("entEditImageLabel");
        if (imageUrlInput) {
          const currentUrl = record.image_url || "";
          imageUrlInput.value = currentUrl;
          if (imageLabel) {
            imageLabel.value = currentUrl ? currentUrl.split("/").pop() : "";
          }
        }
        const imageInsert = document.getElementById("entEditImageInsert");
        if (imageInsert && record.id) {
          imageInsert.href = `/settings/entertainment/media?target=edit&event_id=${record.id}`;
        }
        document.getElementById("entEditDescription").value = record.description || "";
        const colorInput = document.getElementById("entEditColor");
        if (colorInput) {
          colorInput.value = record.event_color || record.effective_event_color || "#6bb4de";
        }
        if (record.start_at) {
          document.getElementById("entEditDate").value = nzDate(record.start_at);
          document.getElementById("entEditTime").value = nzTime(record.start_at);
        } else {
          document.getElementById("entEditDate").value = "";
          document.getElementById("entEditTime").value = "";
        }
        if (record.end_at) {
          document.getElementById("entEditEndDate").value = nzDate(record.end_at);
          document.getElementById("entEditEndTime").value = nzTime(record.end_at);
        } else {
          document.getElementById("entEditEndDate").value = "";
          document.getElementById("entEditEndTime").value = "";
        }
        const select = document.getElementById("entEditActs");
        if (select) {
          const selectedIds = (record.acts || []).map((act) => act.id);
          Array.from(select.options).forEach((option) => {
            option.selected = selectedIds.includes(Number(option.value));
          });
        }
        if (record.series_id) {
          setScopeVisibility(true);
        } else {
          setScopeVisibility(false);
        }
      };
      if (eventData) {
        try {
          const record = JSON.parse(eventData);
          applyRecord(record);
        } catch (err) {
          console.error("Failed to parse event data", err);
        }
        return;
      }
      if (!eventId) return;
      fetch(`/settings/entertainment/${eventId}/json`)
        .then((resp) => resp.json())
        .then((payload) => {
          if (!payload?.success || !payload.event) throw new Error("No event data");
          applyRecord(payload.event);
        })
        .catch((err) => {
          console.error("Failed to load event data", err);
        });
    });

    const mediaSelectionEl = document.getElementById("entMediaSelection");
    const mediaTarget = mediaSelectionEl?.dataset.target || "";
    const mediaEventId = mediaSelectionEl?.dataset.eventId || "";
    const mediaImageUrl = mediaSelectionEl?.dataset.imageUrl || "";

    if (mediaTarget === "add" && mediaImageUrl) {
      const addImageInput = document.getElementById("entAddImageUrl");
      const addImageLabel = document.getElementById("entAddImageLabel");
      if (addImageInput) addImageInput.value = mediaImageUrl;
      if (addImageLabel) {
        addImageLabel.value = mediaImageUrl.split("/").pop();
      }
      const addModal = document.getElementById("addEntertainmentModal");
      if (addModal && window.bootstrap) {
        const modal = new window.bootstrap.Modal(addModal);
        modal.show();
      }
    }

    if (mediaTarget === "edit" && mediaEventId && mediaImageUrl) {
      const editModalEl = document.getElementById("editEntertainmentModal");
      if (editModalEl && window.bootstrap) {
        editModalEl.addEventListener(
          "shown.bs.modal",
          () => {
            const imageUrlInput = document.getElementById("entEditImage");
            const imageLabel = document.getElementById("entEditImageLabel");
            if (imageUrlInput) imageUrlInput.value = mediaImageUrl;
            if (imageLabel) {
              imageLabel.value = mediaImageUrl.split("/").pop();
            }
          },
          { once: true }
        );
        const trigger = document.querySelector(`[data-event-id="${mediaEventId}"]`);
        if (trigger) {
          trigger.click();
        } else {
          const modal = new window.bootstrap.Modal(editModalEl);
          modal.show();
        }
      }
    }

  });
</script>

