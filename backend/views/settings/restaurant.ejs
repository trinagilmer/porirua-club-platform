<% const counts = locals.restaurantCounts || {}; %>

<main class="settings-restaurant">
  <header class="mb-4">
    <h1 class="mb-1">Restaurant Settings</h1>
    <p class="text-muted mb-0">Quick links to manage services, layout, overrides, customer emails, and embeds.</p>
  </header>

  <div class="row g-3">
    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Services & Menus</h5>
          <p class="text-muted small mb-3">Service windows, slot lengths, and special menus.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2"><%= counts.services || 0 %> service block(s)</div>
            <a href="/settings/restaurant/services" class="btn btn-outline-primary btn-sm">Manage services</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Zones & Tables</h5>
          <p class="text-muted small mb-3">Dining zones, table inventory, and seating rules.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2"><%= counts.zones || 0 %> zone(s) - <%= counts.tables || 0 %> table(s)</div>
            <a href="/settings/restaurant/layout" class="btn btn-outline-primary btn-sm">Manage layout</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Overrides & Blackouts</h5>
          <p class="text-muted small mb-3">One-off capacity changes and closed periods.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2"><%= counts.overrides || 0 %> override(s) - <%= counts.blackouts || 0 %> blackout(s)</div>
            <a href="/settings/restaurant/overrides" class="btn btn-outline-primary btn-sm">Manage overrides</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Customer Emails</h5>
          <p class="text-muted small mb-3">Templates for pending and confirmed bookings.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2">Editable templates</div>
            <a href="/settings/restaurant/emails" class="btn btn-outline-primary btn-sm">Edit templates</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="mb-1">Embeds</h5>
          <p class="text-muted small mb-3">Public booking form and calendar embed links.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2">Website links</div>
            <a href="/settings/restaurant/embeds" class="btn btn-outline-primary btn-sm">View embeds</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
