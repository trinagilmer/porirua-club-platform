<main class="settings-restaurant">
  <% const embedBase = (baseUrl || '').replace(/\/$/, ''); %>
  <header class="mb-4">
    <h1 class="mb-1">Restaurant Embeds</h1>
    <p class="text-muted mb-0">Use these URLs to embed the booking form and calendar on your website.</p>
  </header>

  <section class="card shadow-sm mb-4">
    <div class="card-body">
      <h5 class="mb-2">Embeds for your website</h5>
      <p class="text-muted small mb-3">Place these full URLs inside an iframe.</p>
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Public booking form (embed)</label>
          <input type="text" class="form-control form-control-sm" readonly value="<%= embedBase %>/calendar/restaurant/book?embed=1">
        </div>
        <div class="col-md-6">
          <label class="form-label">Restaurant calendar (embed)</label>
          <input type="text" class="form-control form-control-sm" readonly value="<%= embedBase %>/calendar/restaurant?embed=1">
        </div>
        <div class="col-12">
          <small class="text-muted">Example: <%= embedBase %>/calendar/restaurant/book?embed=1</small>
        </div>
      </div>
    </div>
  </section>
</main>
