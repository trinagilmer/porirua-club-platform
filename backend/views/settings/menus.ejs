<% const counts = locals.menuCounts || {}; %>

<main class="menus-page">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-primary mb-0">Menus</h1>
  </div>

  <div class="row g-3 mb-4">
    <div class="col-md-6 col-xl-3">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h6 class="mb-1">Menu Categories</h6>
          <p class="text-muted small mb-3">Group menus (e.g. Catering, Room Hire).</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2"><%= counts.categories || 0 %> category(s)</div>
            <a href="/settings/menus/categories" class="btn btn-outline-primary btn-sm">Manage categories</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-3">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h6 class="mb-1">Menus</h6>
          <p class="text-muted small mb-3">Create menu items and prices.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2"><%= counts.menus || 0 %> menu(s)</div>
            <a href="/settings/menus/manage" class="btn btn-outline-primary btn-sm">Manage menus</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-3">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h6 class="mb-1">Menu Choices</h6>
          <p class="text-muted small mb-3">Add choice groups and options.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2"><%= counts.choices || 0 %> choice(s)</div>
            <a href="/settings/menus/choices" class="btn btn-outline-primary btn-sm">Manage choices</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-xl-3">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h6 class="mb-1">Sales Units</h6>
          <p class="text-muted small mb-3">Units like Each, Platter, Tray.</p>
          <div class="mt-auto">
            <div class="text-muted small mb-2"><%= counts.units || 0 %> unit(s)</div>
            <a href="/settings/menus/units" class="btn btn-outline-primary btn-sm">Manage units</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
