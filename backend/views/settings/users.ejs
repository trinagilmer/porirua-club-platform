<div class="settings-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="h4 mb-1">Staff Users</h2>
      <p class="text-muted small mb-0">Configure Porirua Club staff accounts and assign roles.</p>
    </div>
    <button class="btn btn-sm btn-outline-primary" type="button" <%= !canManage ? 'disabled' : 'data-bs-toggle="collapse" data-bs-target="#newUserCollapse"' %>>
      <i class="bi bi-person-plus me-1"></i> Add staff account
    </button>
  </div>

  <div class="collapse mb-4" id="newUserCollapse">
    <form class="row g-3 align-items-end" method="POST" action="/settings/users/add">
      <div class="col-md-3">
        <label class="form-label">Full name</label>
        <input type="text" name="name" class="form-control form-control-sm" placeholder="e.g. Taylor Green" required>
      </div>
      <div class="col-md-3">
        <label class="form-label">Email</label>
        <input type="email" name="email" class="form-control form-control-sm" placeholder="name@poriruaclub.co.nz" required>
      </div>
      <div class="col-md-2">
        <label class="form-label">Role</label>
        <select name="role" class="form-select form-select-sm">
          <option value="owner">Owner</option>
          <option value="admin">Admin</option>
          <option value="staff" selected>Staff</option>
        </select>
      </div>
      <div class="col-md-2 d-grid">
        <button type="submit" class="btn btn-sm btn-success">Create / update</button>
      </div>
    </form>
  </div>

  <% if (!canManage) { %>
    <div class="alert alert-warning mb-3">
      Admin access is required to edit or remove staff accounts. Contact an owner to elevate your role or use the admin promotion code.
    </div>
  <% } %>
  <div class="users-list d-flex flex-column gap-3">
    <% if (!users.length) { %>
      <div class="empty-state">No staff accounts yet.</div>
    <% } else { %>
  <% users.forEach(userItem => { %>
    <div class="card border rounded-3 p-3">
      <form class="row g-2 align-items-center" method="POST" action="/settings/users/edit">
        <input type="hidden" name="id" value="<%= userItem.id %>">
            <div class="col-md-3">
              <label class="form-label small text-muted">Name</label>
              <input type="text" name="name" value="<%= userItem.name %>" class="form-control form-control-sm" required>
            </div>
            <div class="col-md-3">
              <label class="form-label small text-muted">Email</label>
              <input type="email" name="email" value="<%= userItem.email %>" class="form-control form-control-sm" required>
            </div>
        <div class="col-md-2">
          <label class="form-label small text-muted">Role</label>
          <select name="role" class="form-select form-select-sm">
            <option value="owner" <%= userItem.role === 'owner' ? 'selected' : '' %>>Owner</option>
            <option value="admin" <%= userItem.role === 'admin' ? 'selected' : '' %>>Admin</option>
            <option value="staff" <%= userItem.role === 'staff' ? 'selected' : '' %>>Staff</option>
          </select>
        </div>
        <div class="col-md-2">
          <label class="form-label small text-muted">Created</label>
          <p class="mb-0 small text-muted"><%= new Date(userItem.created_at).toLocaleDateString('en-NZ') %></p>
        </div>
        <div class="col-md-2 d-flex gap-2">
          <button type="submit" class="btn btn-sm btn-outline-secondary flex-grow-1" <%= canManage ? '' : 'disabled' %>>Save</button>
        </div>
      </form>
        <form class="mt-2 text-end" method="POST" action="/settings/users/delete" onsubmit="return confirm('Remove this user?');">
          <input type="hidden" name="id" value="<%= userItem.id %>">
          <button type="submit" class="btn btn-sm btn-outline-danger" <%= canManage ? '' : 'disabled' %>>Delete</button>
        </form>
      </div>
    <% }) %>
  <% } %>
  </div>

    <% if (!canManage) { %>\n    <div class="card border rounded-3 p-3 bg-light mt-4">\n      <p class="fw-semibold mb-2">Need admin access?</p>\n      <% if (secretConfigured) { %>\n        <p class="text-muted small mb-3">Enter the promotion code (the same secret used for archive/delete actions) to elevate your account.</p>\n        <form class="row g-2 align-items-end" method="POST" action="/settings/users/promote">\n          <div class="col-md-4">\n            <label class="form-label small text-muted">Admin code</label>\n            <input type="password" name="secret" class="form-control form-control-sm" required>\n          </div>\n          <div class="col-md-3">\n            <label class="form-label small text-muted">Role</label>\n            <select name="role" class="form-select form-select-sm">\n              <option value="admin">Admin</option>\n              <option value="owner">Owner</option>\n            </select>\n          </div>\n          <div class="col-md-2">\n            <button type="submit" class="btn btn-sm btn-success w-100">Promote</button>\n          </div>\n        </form>\n      <% } else { %>\n        <p class="text-muted small mb-0">Set the ADMIN_SECRET (or BUILD_ADMIN_SECRET) environment variable to enable this promotion form.</p>\n      <% } %>\n    </div>\n  <% } %>
</div>

