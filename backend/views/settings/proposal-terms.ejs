<div class="settings-page">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
    <div>
      <h1 class="h4 mb-1">Proposal Terms Library</h1>
      <p class="text-muted small mb-0">Create reusable terms blocks that can be pulled into any proposal.</p>
    </div>
    <button class="btn btn-outline-primary" id="newTermBtn">
      <i class="bi bi-plus-circle me-1"></i> New Terms Block
    </button>
  </div>

  <div class="row g-4">
    <div class="col-lg-4">
      <div class="border rounded-4 bg-white h-100">
        <div class="p-3 border-bottom fw-semibold">Saved Terms</div>
        <div class="list-group list-group-flush" id="termsList">
          <% if (!(terms || []).length) { %>
            <div class="p-3 text-muted small fst-italic">No terms saved yet.</div>
          <% } else { %>
            <% terms.forEach(term => { %>
              <button type="button" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start"
                data-term-id="<%= term.id %>">
                <div class="me-2 text-start">
                  <div class="fw-semibold"><%= term.name %></div>
                  <div class="text-muted extra-small"><%= term.category || 'General' %></div>
                </div>
                <% if (term.is_default) { %>
                  <span class="badge bg-primary-subtle text-primary">Default</span>
                <% } %>
              </button>
            <% }) %>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-lg-8">
      <div class="border rounded-4 bg-white h-100">
        <div class="p-3 border-bottom fw-semibold d-flex justify-content-between align-items-center">
          <span id="termFormTitle">Create Terms Block</span>
          <span class="text-muted extra-small" id="termLastUpdated"></span>
        </div>
        <form class="p-3 vstack gap-3" id="termForm">
          <input type="hidden" name="id" id="termId">
          <div>
            <label class="form-label">Name</label>
            <input type="text" name="name" id="termName" class="form-control" placeholder="e.g. Standard Function Terms" required>
          </div>
          <div class="row g-2">
            <div class="col-sm-6">
              <label class="form-label">Category</label>
              <input type="text" name="category" id="termCategory" class="form-control" placeholder="Optional grouping">
            </div>
            <div class="col-sm-6 d-flex align-items-center">
              <div class="form-check mt-3">
                <input class="form-check-input" type="checkbox" id="termDefault" name="is_default">
                <label class="form-check-label" for="termDefault">Set as default</label>
              </div>
            </div>
          </div>
          <div>
            <label class="form-label">Content</label>
            <textarea class="form-control" id="termContent" name="content" rows="10" placeholder="Write or paste the terms..."></textarea>
          </div>
          <div class="d-flex flex-wrap gap-2 justify-content-end">
            <button type="button" class="btn btn-outline-secondary" id="termResetBtn">Reset</button>
            <button type="button" class="btn btn-outline-danger" id="termDeleteBtn" disabled>Delete</button>
            <button type="submit" class="btn btn-success" id="termSaveBtn">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  window.proposalTermsData = <%- JSON.stringify(terms || []) %>;
</script>
