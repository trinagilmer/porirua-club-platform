<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content="Porirua Club Platform" />

<!-- 🧱 Fonts -->
<link
  href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
  rel="stylesheet"
/>

<!-- 💅 Bootstrap 5 (CSS only — JS loaded in body) -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
  crossorigin="anonymous"
/>

<!-- ✏️ Quill Editor Styles -->
<link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet" />

<!-- 🎨 Compiled SCSS Output -->
<link rel="stylesheet" href="/css/main.css?v=2.0" />

<!-- 🩹 Optional Bootstrap Fix Layer -->
<link rel="stylesheet" href="/css/bootstrap-fix.css" />

<!-- 💬 Page-specific CSS (optional per render) -->
<% if (typeof pageCss !== 'undefined' && pageCss) { %>
  <% (Array.isArray(pageCss) ? pageCss : [pageCss]).forEach(file => { %>
    <link rel="stylesheet" href="<%= file %>">
  <% }) %>
<% } %>

<!-- 🧠 Page Title -->
<title><%= typeof title !== 'undefined' ? title : 'Porirua Club Platform' %></title>

<!-- ⚙️ Optional per-page JS (deferred) -->
<% if (typeof pageJs !== 'undefined' && pageJs) { %>
  <% (Array.isArray(pageJs) ? pageJs : [pageJs]).forEach(file => { %>
    <script src="<%= file %>" defer></script>
  <% }) %>
<% } %>
