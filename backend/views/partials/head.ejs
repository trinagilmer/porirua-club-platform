<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- 🧱 Core Fonts & Styles -->
<link
  href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
  rel="stylesheet"
/>
<link rel="stylesheet" href="/css/main.css" />

<!-- 💅 Bootstrap 5 (CSS only — JS loaded separately) -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
  crossorigin="anonymous"
/>

<!-- 🧩 Scoped Fix Layer (neutralizes Bootstrap bleed) -->
<link rel="stylesheet" href="/css/bootstrap-fix.css" />

<!-- 💬 Page-Specific Styles (optional, e.g. inbox.css) -->
<% if (typeof pageCss !== 'undefined' && pageCss) { %>
  <link rel="stylesheet" href="/css/<%= pageCss %>">
<% } %>

<title><%= typeof title !== 'undefined' ? title : 'Porirua Club Platform' %></title>

<!-- ⚙️ Optional per-page scripts -->
<% if (typeof pageJs !== 'undefined' && pageJs) { %>
  <script src="/js/<%= pageJs %>" defer></script>
<% } %>



