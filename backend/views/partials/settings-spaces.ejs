<div class="settings-section">
  <h4>Rooms / Spaces</h4>
  <button class="btn btn-sm btn-primary mb-3" id="addRoomBtn">+ Add Room</button>

  <% if (rooms.length > 0) { %>
    <ul class="list-group">
      <% rooms.forEach(r => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span class="room-name"><%= r.name %></span>
<% if (r.capacity) { %><small class="text-muted">(<%= r.capacity %> ppl)</small><% } %>

          <div>
            <button class="btn btn-sm btn-outline-secondary edit-room" data-id="<%= r.id %>">Edit</button>
            <button class="btn btn-sm btn-outline-danger delete-room" data-id="<%= r.id %>">Delete</button>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p class="text-muted">No rooms yet.</p>
  <% } %>
</div>
