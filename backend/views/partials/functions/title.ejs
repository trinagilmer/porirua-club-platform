<!-- ===== Function Title Bar ===== -->
<div class="function-title-bar bg-light border-bottom py-3 mb-3">
  <div class="container d-flex justify-content-between align-items-center flex-wrap">
    <div>
      <h1 class="h4 fw-bold text-success mb-0">
        <%= title || (fn?.event_name || 'Function Details') %>
      </h1>
      <% if (fn && fn.event_date) { %>
        <small class="text-muted">
          <%= new Date(fn.event_date).toLocaleDateString() %>
        </small>
      <% } %>
    </div>

    <div class="text-muted small">
      <%= fn?.venue_name ? fn.venue_name : '' %>
    </div>
  </div>
</div>
