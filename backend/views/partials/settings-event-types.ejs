<div class="settings-section">
  <h4>Event Types</h4>
  <button class="btn btn-sm btn-primary mb-3" id="addEventTypeBtn">+ Add Event Type</button>

  <% if (eventTypes.length > 0) { %>
<ul class="list-group">
  <% eventTypes.forEach(et => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span class="event-type-name"><%= et.name %></span>
      <div>
        <button class="btn btn-sm btn-outline-secondary edit-event-type" data-id="<%= et.id %>">Edit</button>
        <button class="btn btn-sm btn-outline-danger delete-event-type" data-id="<%= et.id %>">Delete</button>
      </div>
    </li>
  <% }) %>
</ul>

  <% } else { %>
    <p class="text-muted">No event types yet.</p>
  <% } %>
</div>
