<!-- views/partials/linkMessageModal.ejs -->
<div class="modal fade" id="linkMessageModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content p-4">
      <h4>ðŸ”— Link Message</h4>
      <form action="/inbox/link/<%= message.id %>" method="POST">
        <div class="form-group mb-3">
          <label for="contact_id">Contact</label>
          <select name="contact_id" id="contact_id" class="form-control">
            <option value="">(none)</option>
            <% contacts.forEach(c => { %>
              <option value="<%= c.id %>" <%= message.related_contact === c.id ? 'selected' : '' %>><%= c.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group mb-3">
          <label for="function_id">Function</label>
          <select name="function_id" id="function_id" class="form-control">
            <option value="">(none)</option>
            <% functions.forEach(f => { %>
              <option value="<%= f.id %>" <%= message.related_function === f.id ? 'selected' : '' %>><%= f.event_name %></option>
            <% }) %>
          </select>
        </div>

        <div class="modal-footer d-flex justify-content-between">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">ðŸ’¾ Save Link</button>
        </div>
      </form>
    </div>
  </div>
</div>


