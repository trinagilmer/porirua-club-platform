<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || 'Settings | Porirua Club Platform' %></title>

  <!-- ðŸ§± Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />

  <!-- ðŸ’… Bootstrap -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
    crossorigin="anonymous"
  />

  <!-- ðŸŽ¨ Core Styles -->
  <link rel="stylesheet" href="/css/main.css?v=2.0" />
  <link rel="stylesheet" href="/css/settings.css?v=1.1" />

  <!-- ðŸ’¬ Page-specific CSS/SCSS -->
  <% 
    const _pageCss = typeof pageCss !== 'undefined'
      ? (Array.isArray(pageCss) ? pageCss : [pageCss])
      : []; 
  %>
  <% _pageCss.forEach(file => { 
    const cssPath = file.endsWith('.scss')
      ? file.replace('/scss/', '/css/').replace('.scss', '.css')
      : file;
  %>
    <link rel="stylesheet" href="<%- cssPath %>">
  <% }) %>
</head>

<body data-page="settings">
  <% if (flashMessage) { %>
    <div 
      class="toast align-items-center text-bg-<%= flashType || 'info' %> border-0 position-fixed bottom-0 end-0 m-3"
      role="alert" aria-live="assertive" aria-atomic="true" style="z-index: 1050;"
    >
      <div class="d-flex">
        <div class="toast-body"><%= flashMessage %></div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  <% } %>

  <!-- ðŸ§­ Navbar -->
  <header class="main-header navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand logo-link" href="/">
        <img src="/img/pc-logo.png" alt="Porirua Club" class="logo-img" />
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 nav-links">
          <li class="nav-item"><a class="nav-link <%= active === 'dashboard' ? 'active' : '' %>" href="/dashboard">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link <%= active === 'functions' ? 'active' : '' %>" href="/functions">Functions</a></li>
          <li class="nav-item"><a class="nav-link <%= active === 'inbox' ? 'active' : '' %>" href="/inbox">Inbox</a></li>
          <li class="nav-item"><a class="nav-link <%= active === 'settings' ? 'active' : '' %>" href="/settings">Settings</a></li>
        </ul>

        <% if (user) { %>
          <div class="user-circle ms-2" title="<%= user.name || '' %>">
            <%= user.name ? user.name.charAt(0).toUpperCase() : '?' %>
          </div>
        <% } else { %>
          <a href="/login" class="btn btn-outline-light btn-sm">Login</a>
        <% } %>
      </div>
    </div>
  </header>

  <!-- âš™ï¸ Settings Layout -->
  <main class="settings-layout d-flex" style="padding-top: 5rem; min-height: calc(100vh - 5rem);">
    <!-- ðŸ§­ Sidebar -->
    <aside class="settings-sidebar border-end p-4 bg-light" style="width: 250px;">
      <h5 class="mb-3 text-uppercase text-muted fw-bold">Settings</h5>
      <nav class="nav flex-column gap-1">
      <a href="/settings/overview" class="nav-link <%= activeTab === 'overview' ? 'active fw-semibold' : '' %>">Overview</a>
      <a href="/settings/event-types" class="nav-link <%= activeTab === 'event-types' ? 'active fw-semibold' : '' %>">Event Types</a>
      <a href="/settings/spaces" class="nav-link <%= activeTab === 'spaces' ? 'active fw-semibold' : '' %>">Rooms / Spaces</a>
      <a href="/settings/note-templates" class="nav-link <%= activeTab === 'note-templates' ? 'active fw-semibold' : '' %>">Note Templates</a>
      <a href="/settings/proposal-terms" class="nav-link <%= activeTab === 'proposal-terms' ? 'active fw-semibold' : '' %>">Proposal Terms</a>
<!-- Menus Group -->
<div class="nav-item">
  <button
    class="btn w-100 text-start nav-link d-flex justify-content-between align-items-center
      <%= ['menus', 'menu-categories', 'menu-choices', 'menu-units'].includes(activeTab) ? 'active fw-semibold' : '' %>"
    data-bs-toggle="collapse"
    data-bs-target="#submenu-menus"
    aria-expanded="<%= ['menus', 'menu-categories', 'menu-choices', 'menu-units'].includes(activeTab) ? 'true' : 'false' %>"
    aria-controls="submenu-menus"
  >
    Menus
    <span class="ms-auto">
      <i class="bi bi-chevron-down small"></i>
    </span>
  </button>

  <div class="collapse <%= ['menus', 'menu-categories', 'menu-choices', 'menu-units'].includes(activeTab) ? 'show' : '' %>" id="submenu-menus">
    <nav class="nav flex-column ms-3 mt-1">
      <a href="/settings/menus" class="nav-link <%= activeTab === 'menus' ? 'active fw-semibold' : '' %>">
        Manage Menus
      </a>
      <a href="/settings/menus/categories" class="nav-link <%= activeTab === 'menu-categories' ? 'active fw-semibold' : '' %>">
        Sales Categories
      </a>
      <a href="/settings/menus/choices" class="nav-link <%= activeTab === 'menu-choices' ? 'active fw-semibold' : '' %>">
        Menu Choices
      </a>
      <a href="/settings/menus/units" class="nav-link <%= activeTab === 'menu-units' ? 'active fw-semibold' : '' %>">
        Sales Units
      </a>
    </nav>
  </div>
</div>
        <a href="/settings/services" class="nav-link <%= activeTab === 'services' ? 'active fw-semibold' : '' %>">Services</a>
        <a href="/settings/facilities" class="nav-link <%= activeTab === 'facilities' ? 'active fw-semibold' : '' %>">Facilities</a>
      </nav>
    </aside>

    <!-- ðŸ§© Main Content -->
    <section class="settings-content flex-grow-1 p-4">
      <div class="container-fluid">
        <%- body %>
      </div>
    </section>
  </main>

  <!-- âš™ï¸ Scripts -->
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>

  <script type="module" src="/js/settings/_shared.js"></script>

  <!-- ðŸ’¬ Dynamic Page-specific JS -->
  <% 
    const _pageJs = typeof pageJs !== 'undefined'
      ? (Array.isArray(pageJs) ? pageJs : [pageJs])
      : [];
  %>

  <% _pageJs.forEach(file => { %>
    <script src="<%- file %>" onerror="console.warn('âš ï¸ Missing script:', this.src)"></script>
  <% }) %>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const toastEl = document.querySelector('.toast');
      if (toastEl) new bootstrap.Toast(toastEl, { delay: 4000 }).show();
    });
  </script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // ðŸ”¸ Animate submenu chevrons
    const toggles = document.querySelectorAll('[data-bs-toggle="collapse"][data-bs-target^="#submenu-"]');

    toggles.forEach(btn => {
      const targetId = btn.getAttribute('data-bs-target');
      const target = document.querySelector(targetId);
      const icon = btn.querySelector('i.bi');

      if (!target || !icon) return;

      // Set initial rotation
      if (target.classList.contains('show')) icon.style.transform = 'rotate(180deg)';

      target.addEventListener('show.bs.collapse', () => {
        icon.style.transition = 'transform 0.25s ease';
        icon.style.transform = 'rotate(180deg)';
      });

      target.addEventListener('hide.bs.collapse', () => {
        icon.style.transition = 'transform 0.25s ease';
        icon.style.transform = 'rotate(0deg)';
      });
    });
  });
</script>

</body>
</html>
