<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof title !== 'undefined' ? title : 'Settings | Porirua Club Platform' %></title>

  <!-- ðŸ§± Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />

  <!-- ðŸ’… Bootstrap 5 -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />

  <!-- ðŸŽ¨ Core Styles -->
  <link rel="stylesheet" href="/css/main.css?v=2.0" />
  <link rel="stylesheet" href="/css/settings.css?v=1.1" />

  <!-- ðŸ’¬ Page-specific CSS -->
  <% if (typeof pageCss !== 'undefined' && pageCss) { %>
    <% (Array.isArray(pageCss) ? pageCss : [pageCss]).forEach(file => { %>
      <link rel="stylesheet" href="<%= file %>">
    <% }); %>
  <% } %>
</head>

<body data-page="settings">

   <% if (typeof flashMessage !== 'undefined' && flashMessage) { %>
    <div data-flash-message="<%= flashMessage %>" data-flash-type="<%= flashType || 'info' %>"></div>
  <% } %>

  <!-- ðŸ§­ Navbar (identical to main.ejs) -->
  <header class="main-header navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand logo-link" href="/">
        <img src="/img/pc-logo.png" alt="Porirua Club" class="logo-img" />
      </a>

      <!-- ðŸ” Burger -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
              aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- ðŸ”¹ Nav Links -->
      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 nav-links">
          <li class="nav-item">
            <a class="nav-link <%= active === 'dashboard' ? 'active' : '' %>" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= active === 'functions' ? 'active' : '' %>" href="/functions">Functions</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= active === 'inbox' ? 'active' : '' %>" href="/inbox">Inbox</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= active === 'settings' ? 'active' : '' %>" href="/settings">Settings</a>
          </li>
        </ul>

        <!-- ðŸ‘¤ User -->
        <div class="d-flex align-items-center header-right">
          <% if (user) { %>
            <div class="user-circle ms-2" title="<%= user.name || '' %>">
              <%= user.name ? user.name.charAt(0).toUpperCase() : '?' %>
            </div>
          <% } else { %>
            <a href="/login" class="btn btn-outline-light btn-sm">Login</a>
          <% } %>
        </div>
      </div>
    </div>
  </header>

  <!-- âš™ï¸ SETTINGS PAGE LAYOUT -->
  <main class="settings-layout d-flex" style="padding-top: 5rem; min-height: calc(100vh - 5rem);">
    
    <!-- ðŸ§­ Sidebar Navigation -->
    <aside class="settings-sidebar border-end p-4 bg-light" style="width: 250px;">
      <h5 class="mb-3 text-uppercase text-muted fw-bold">Settings</h5>
      <nav class="nav flex-column gap-1">
        <a href="/settings/event-types" class="nav-link <%= activeTab === 'event-types' ? 'active fw-semibold' : '' %>">Event Types</a>
        <a href="/settings/spaces" class="nav-link <%= activeTab === 'spaces' ? 'active fw-semibold' : '' %>">Rooms / Spaces</a>
        <a href="/settings/services" class="nav-link <%= activeTab === 'services' ? 'active fw-semibold' : '' %>">Services</a>
        <a href="/settings/facilities" class="nav-link <%= activeTab === 'facilities' ? 'active fw-semibold' : '' %>">Facilities</a>
      </nav>
    </aside>

    <!-- ðŸ§© Main Content Area -->
    <section class="settings-content flex-grow-1 p-4">
      <div class="container-fluid">
        <%- body %>
      </div>
    </section>
  </main>

  <!-- âš™ï¸ Scripts -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>

  <script type="module" src="/js/settings/_shared.js"></script>

  <!-- ðŸ’¬ Page-specific JS -->
  <% if (typeof pageJs !== 'undefined' && pageJs) { %>
    <% (Array.isArray(pageJs) ? pageJs : [pageJs]).forEach(file => { %>
      <script src="<%= file %>"></script>
    <% }); %>
  <% } %>

</body>
</html>

