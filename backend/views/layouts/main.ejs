<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof title !== 'undefined' ? title : 'Porirua Club Platform' %></title>

  <!-- ðŸ§± Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />

  <!-- ðŸ’… Bootstrap 5 -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />

  <!-- ðŸŽ¨ Main compiled SCSS -->
  <link rel="stylesheet" href="/css/main.css?v=2.0" />

  <!-- ðŸ’¬ Page-specific CSS -->
  <% if (typeof pageCss !== 'undefined' && pageCss) { %>
    <% (Array.isArray(pageCss) ? pageCss : [pageCss]).forEach(file => { %>
      <link rel="stylesheet" href="<%= file %>">
    <% }); %>
  <% } %>

  <!-- ðŸª¶ Quill Editor styles -->
  <link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet" />
</head>

<%
  const layoutHideChrome = typeof hideChrome !== 'undefined' ? hideChrome : false;
  const layoutPageType = typeof pageType !== 'undefined' ? pageType : '';
  const contentPaddingClass = layoutHideChrome
    ? 'p-0'
    : (layoutPageType === 'function-detail' ? 'p-0' : 'px-4 py-4');
%>

<body data-page="<%= layoutPageType %>" class="<%= layoutHideChrome ? 'layout-bare' : '' %>">

  <% if (!layoutHideChrome) { %>

  <!-- ðŸ§­ Main Header -->
  <header class="main-header navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand logo-link" href="/">
        <img src="/img/pc-logo.png" alt="Porirua Club" class="logo-img" />
      </a>

      <!-- ðŸ” Burger -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
              aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- ðŸ”¹ Nav Links -->
      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 nav-links">
          <li class="nav-item">
            <a class="nav-link <%= active === 'dashboard' ? 'active' : '' %>" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= active === 'functions' ? 'active' : '' %>" href="/functions">Functions</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= active === 'calendar' ? 'active' : '' %>" href="/calendar">Calendar</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= active === 'restaurant' ? 'active' : '' %>" href="/calendar/restaurant">Restaurant</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= active === 'entertainment' ? 'active' : '' %>" href="/entertainment">Entertainment</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= active === 'inbox' ? 'active' : '' %>" href="/inbox">Inbox</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= active === 'settings' ? 'active' : '' %>" href="/settings">Settings</a>
          </li>
        </ul>

        <!-- ðŸ‘¤ User -->
        <div class="d-flex align-items-center header-right">
          <% if (user) { %>
            <div class="dropdown">
              <button
                class="btn btn-outline-light header-user-avatar p-0"
                type="button"
                id="userMenuBtn"
                data-bs-toggle="dropdown"
                aria-expanded="false"
                title="<%= user.name || 'User' %>"
              >
                <%= user.name ? user.name.charAt(0).toUpperCase() : '?' %>
              </button>
              <ul class="dropdown-menu dropdown-menu-end text-sm" aria-labelledby="userMenuBtn">
                <li><a class="dropdown-item" href="/settings/users">View Profile</a></li>
                <li><a class="dropdown-item" href="/auth/logout">Log out</a></li>
                <% if (user.role && ['admin','owner'].includes(user.role.toLowerCase())) { %>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="/settings/users">User management</a></li>
                <% } %>
              </ul>
            </div>
          <% } else { %>
            <a href="/login" class="btn btn-outline-light btn-sm">Login</a>
          <% } %>
        </div>
      </div>
    </div>
  </header>
  <% } %>

  <!-- ðŸ’  Main Content -->
  <div class="main-content <%= contentPaddingClass %>">
    <% if (
      typeof fn !== 'undefined' &&
      pageType === 'function-detail' &&
      typeof linkedContacts !== 'undefined'
    ) { %>
      <%- include('../partials/layouts/function-shell', {
        fn,
        linkedContacts,
        rooms,
        eventTypes,
        activeTab: typeof activeTab !== 'undefined' && activeTab ? activeTab : 'overview'
      }) %>
    <% } else { %>
      <%- body %>
    <% } %>
  </div>

  <!-- ðŸ“£ Toast Notifications -->
  <div id="toast-container"></div>

  <!-- âš™ï¸ Vendor Scripts -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
  <script src="https://cdn.quilljs.com/1.3.7/quill.min.js"></script>

  <!-- Core app initialisation -->
  <script type="module" src="/js/core/init.js"></script>

  <!-- Page-specific JS -->
  <% if (typeof pageJs !== 'undefined' && pageJs) { %>
    <% (Array.isArray(pageJs) ? pageJs : [pageJs]).forEach(file => { %>
      <script src="<%= file %>"></script>
    <% }); %>
  <% } %>
</body>
</html>






