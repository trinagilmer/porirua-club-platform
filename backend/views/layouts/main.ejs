<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof title !== 'undefined' ? title : 'Porirua Club Platform' %></title>

  <!-- 🧱 Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />

  <!-- 💅 Bootstrap 5 -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />

  <!-- 🎨 Main compiled SCSS (modern styling) -->
  <link rel="stylesheet" href="/css/main.css?v=2.0" />
    <!-- 🎨 Legacy fallback styles -->
  <link rel="stylesheet" href="/css/bootstrap-fix.css" />
  <link rel="stylesheet" href="/css/legacy/main.css" />
  <link rel="stylesheet" href="/css/legacy/styles.css" />
  <link rel="stylesheet" href="/css/legacy/inbox.css" />


  <!-- 💬 Page-specific CSS (optional) -->
  <% if (typeof pageCss !== 'undefined' && pageCss) { %>
    <% (Array.isArray(pageCss) ? pageCss : [pageCss]).forEach(file => { %>
      <link rel="stylesheet" href="<%= file %>">
    <% }); %>
  <% } %>

  <!-- 🪶 Quill Editor styles -->
  <link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet" />
</head>


<body data-page="<%= typeof pageType !== 'undefined' ? pageType : '' %>">

  <!-- 🧭 Main Header -->
  <header class="main-header navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand logo-link" href="/">
        <img src="/img/pc-logo.png" alt="Porirua Club" class="logo-img" />
      </a>

      <!-- 🍔 Burger -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
              aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- 🔹 Nav Links -->
      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 nav-links">
          <li class="nav-item">
            <a class="nav-link <%= active === 'dashboard' ? 'active' : '' %>" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= active === 'functions' ? 'active' : '' %>" href="/functions">Functions</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= active === 'inbox' ? 'active' : '' %>" href="/inbox">Inbox</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= active === 'settings' ? 'active' : '' %>" href="/settings">Settings</a>
          </li>
        </ul>

        <!-- 👤 User -->
        <div class="d-flex align-items-center header-right">
          <% if (user) { %>
            <div class="user-circle ms-2" title="<%= user.name || '' %>">
              <%= user.name ? user.name.charAt(0).toUpperCase() : '?' %>
            </div>
          <% } else { %>
            <a href="/login" class="btn btn-outline-light btn-sm">Login</a>
          <% } %>
        </div>
      </div>
    </div>
  </header>

  <!-- 💠 Main Content -->
  <main class="main-content container-fluid px-4 py-4">

    <%- body %>
  </main>

  <!-- 📣 Toast Notifications -->
  <div id="toast-container"></div>

  <!-- ⚙️ Vendor Scripts -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
  <script src="https://cdn.quilljs.com/1.3.7/quill.min.js"></script>

  <!-- ⚙️ Core App Script -->
  <script type="module" src="/js/core/init.js"></script>

  <!-- 🧩 Page-specific JS (optional) -->
  <% if (typeof pageJs !== 'undefined' && pageJs) { %>
    <% (Array.isArray(pageJs) ? pageJs : [pageJs]).forEach(file => { %>
      <script src="<%= file %>"></script>
    <% }); %>
  <% } %>

</body>
</html>






