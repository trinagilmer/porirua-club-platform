<!DOCTYPE html>
<html lang="en">
<head>

</head>

<body>
  <%- include('../partials/header', { active: 'settings', user }) %>

  <main class="settings-layout" style="display: flex; padding-top: 6rem; min-height: calc(100vh - 6rem);">

    <!-- 🧭 SIDEBAR -->
    <aside class="settings-sidebar" style="width: 250px; border-right: 1px solid #ddd; padding: 1.5rem; background: #fafafa;">
      <h5 class="mb-3">Settings</h5>
      <nav class="nav flex-column">
        <a href="/settings/event-types" class="nav-link <%= activeTab==='event-types'?'active':'' %>">Event Types</a>
        <a href="/settings/spaces" class="nav-link <%= activeTab==='spaces'?'active':'' %>">Rooms / Spaces</a>
        <a href="/settings/services" class="nav-link disabled">Services (coming soon)</a>
        <a href="/settings/facilities" class="nav-link disabled">Facilities (coming soon)</a>
      </nav>
    </aside>

    <!-- 🧩 MAIN CONTENT AREA -->
    <section class="settings-content" style="flex-grow: 1; padding: 2rem;">
      <%- body %>
    </section>
  </main>
<!-- 🟦 Add Event Type Modal (Settings) -->
<div id="settingsEventTypeModal" class="settings-modal hidden">
  <div class="settings-modal-dialog">
    <div class="settings-modal-content">
      <div class="settings-modal-header">
        <h5 class="settings-modal-title">Add Event Type</h5>
        <button type="button" id="closeSettingsEventTypeModal" class="settings-modal-close">×</button>
      </div>

      <div class="settings-modal-body">
        <input type="text" id="settingsNewEventTypeName" class="form-control" placeholder="Enter event type name" required />
      </div>

      <div class="settings-modal-footer">
        <button id="settingsSaveEventTypeBtn" class="btn btn-primary">Save</button>
        <button id="settingsCancelEventTypeBtn" class="btn ghost">Cancel</button>
      </div>
    </div>
  </div>
</div>
<!-- ✏️ Edit Event Type Modal (Settings) -->
<div id="settingsEventTypeEditModal" class="settings-modal hidden">
  <div class="settings-modal-dialog">
    <div class="settings-modal-content">
      <div class="settings-modal-header">
        <h5 class="settings-modal-title">Edit Event Type</h5>
        <button type="button" id="closeSettingsEventTypeEditModal" class="settings-modal-close">×</button>
      </div>

      <div class="settings-modal-body">
        <input type="text" id="settingsEditEventTypeName" class="form-control" required />
        <input type="hidden" id="settingsEditEventTypeId" />
      </div>

      <div class="settings-modal-footer">
        <button id="settingsSaveEditEventTypeBtn" class="btn btn-primary">Save</button>
        <button id="settingsCancelEditEventTypeBtn" class="btn ghost">Cancel</button>
      </div>
    </div>
  </div>
</div>
<!-- 🏠 Add Room / Space Modal -->
<div id="settingsRoomAddModal" class="settings-modal hidden">
  <div class="settings-modal-dialog">
    <div class="settings-modal-content">
      <div class="settings-modal-header">
        <h5 class="settings-modal-title">Add Room / Space</h5>
        <button type="button" id="closeSettingsRoomAddModal" class="settings-modal-close">×</button>
      </div>

      <div class="settings-modal-body">
        <input type="text" id="settingsNewRoomName" class="form-control mb-2" placeholder="Enter room name" required />
        <input type="number" id="settingsNewRoomCapacity" class="form-control" placeholder="Capacity (optional)" />
      </div>

      <div class="settings-modal-footer">
        <button id="settingsSaveRoomBtn" class="btn btn-primary">Save</button>
        <button id="settingsCancelRoomBtn" class="btn ghost">Cancel</button>
      </div>
    </div>
  </div>
</div>

<!-- ✏️ Edit Room / Space Modal -->
<div id="settingsRoomEditModal" class="settings-modal hidden">
  <div class="settings-modal-dialog">
    <div class="settings-modal-content">
      <div class="settings-modal-header">
        <h5 class="settings-modal-title">Edit Room / Space</h5>
        <button type="button" id="closeSettingsRoomEditModal" class="settings-modal-close">×</button>
      </div>

      <div class="settings-modal-body">
        <input type="text" id="settingsEditRoomName" class="form-control mb-2" required />
        <input type="number" id="settingsEditRoomCapacity" class="form-control" placeholder="Capacity (optional)" />
        <input type="hidden" id="settingsEditRoomId" />
      </div>

      <div class="settings-modal-footer">
        <button id="settingsSaveEditRoomBtn" class="btn btn-primary">Save</button>
        <button id="settingsCancelEditRoomBtn" class="btn ghost">Cancel</button>
      </div>
    </div>
  </div>
</div>



  <script src="/js/settings.js"></script>
</body>
</html>

