{
  "name": "porirua-club-platform",
  "version": "1.0.0",
  "description": "Porirua Club Booking Platform (Functions, Restaurant, Events, Tasks, Reports)",
  "main": "backend/app.js",
  "scripts": {
    "start": "node backend/app.js",
    "dev": "nodemon backend/app.js",
    "build-scss": "npx sass backend/scss/main.scss backend/public/css/main.css --no-source-map --style=compressed",
    "dev-scss": "npx sass backend/scss/main.scss backend/public/css/main.css --no-source-map --style=expanded --watch",
    "dev-all": "npx concurrently \"npm run dev-scss\" \"npm run dev\"",
    "lint": "eslint . --ext .js --ignore-pattern public/**",
    "lint:fix": "eslint . --ext .js --ignore-pattern public/** --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trinagilmer/porirua-club-platform.git"
  },
  "keywords": [
    "express",
    "booking",
    "porirua",
    "club",
    "dashboard"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/trinagilmer/porirua-club-platform/issues"
  },
  "homepage": "https://github.com/trinagilmer/porirua-club-platform#readme",
  "dependencies": {
    "@azure/msal-node": "^3.8.0",
    "@supabase/supabase-js": "^2.74.0",
    "bcrypt": "^6.0.0",
    "chart.js": "^4.5.1",
    "connect-flash": "^0.1.1",
    "connect-pg-simple": "^10.0.0",
    "csv-parse": "^5.6.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.2",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "quill": "^1.3.7",
    "quill-better-table": "^1.2.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "concurrently": "^9.1.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "nodemon": "^3.1.10",
    "sass": "^1.93.2",
    "typescript-eslint": "^8.46.3"
  }
}
