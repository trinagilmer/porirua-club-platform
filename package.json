  "main": "backend/app.js",
  "scripts": {
    "start": "node backend/app.js",
    "dev": "nodemon backend/app.js",
    "build-scss": "npx sass backend/scss/main.scss backend/public/css/main.css --no-source-map --style=compressed",
    "dev-scss": "npx sass backend/scss/main.scss backend/public/css/main.css --no-source-map --style=expanded --watch",
    "dev-all": "npx concurrently \"npm run dev-scss\" \"npm run dev\"",
